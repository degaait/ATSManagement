@model ATSManagementExternal.ViewModels.CivilJusticeExternalRequestModel
@{
    ViewData["Title"] = "Create";
}
<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Your Requests
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Create</h4>
                        </div>
                        <form asp-action="Create">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input asp-for="ExterUserId" type="hidden" class="form-control" />
                                        <input asp-for="IntId" type="hidden" class="form-control" />
                                        <div class="mb-3 row" id="divServiceType">
                                            <label asp-for="TypeID" class=" col-2 col-form-label">Request types</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.TypeID, new SelectList(Model.RequestTypes, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="TypeID" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divRequestDetail">
                                            <label asp-for="RequestDetail" class=" col-2 col-form-label">Request Detail</label>
                                            <div class="col">
                                                <input asp-for="RequestDetail" class="form-control" />
                                                <span asp-validation-for="RequestDetail" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divAppointmentDetail">
                                            <label asp-for="AppointmentDetail" class=" col-2 col-form-label">Appointment Detail</label>
                                            <div class="col">
                                                <input asp-for="AppointmentDetail" class="form-control" />
                                                <span asp-validation-for="AppointmentDetail" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="RequestedDate" class=" col-2 col-form-label">Creation Date</label>
                                            <div class="col">
                                                <input asp-for="CreatedDate" class="form-control" readonly />
                                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divServiceType">
                                            <label asp-for="ServiceTypeID" class=" col-2 col-form-label">Service types</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.ServiceTypeID, new SelectList(Model.ServiceTypes, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="ServiceTypeID" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divCasetype">
                                            <label asp-for="CaseTypeId" class=" col-2 col-form-label">Casy types</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.CaseTypeId, new SelectList(Model.CaseTypes, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="CaseTypeId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divDocType">
                                            <label asp-for="DocId" class=" col-2 col-form-label">Document type</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.DocId, new SelectList(Model.LegalStadiesCasetypes, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="DocId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divQuestType">
                                            <label asp-for="QuestTypeId" class=" col-2 col-form-label">Question types</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.QuestTypeId, new SelectList(Model.LegalStadiesQuestiontypes, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="QuestTypeId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-3 col-form-label">Document file</label>
                                            <div class="col">
                                                <input asp-for="DocumentFile" type="file" class="form-file-button" />
                                                <span asp-validation-for="DocumentFile" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="Priorities" class=" col-2 col-form-label">Priority</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.PriorityId, new SelectList(Model.Priorities, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="PriorityId" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-end">
                                <div class="d-flex">
                                    <input type="submit" value="Create" class="btn btn-primary" />|
                                    <a asp-action="CivilJustice">Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let options = {
                selector: '#RequestDetail',
                height: 300,
                menubar: true,
                statusbar: false,
                plugins: [
                    'advlist autolink lists link image charmap print preview anchor',
                    'searchreplace visualblocks code fullscreen',
                    'insertdatetime media table paste code help wordcount',
                    'lists'
                ],
                toolbar: 'undo redo | formatselect | ' +
                    'bold italic backcolor | alignleft aligncenter ' +
                    'alignright alignjustify | bullist numlist outdent indent | ' +
                    'removeformat',
                content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif; font-size: 14px; -webkit-font-smoothing: antialiased; }'
            }
            if (localStorage.getItem("tablerTheme") === 'dark') {
                options.skin = 'oxide-dark';
                options.content_css = 'dark';
            }
            tinyMCE.init(options);
        })
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let options = {
                selector: '#AppointmentDetail',
                height: 300,
                menubar: true,
                statusbar: false,
                plugins: [
                    'advlist autolink lists link image charmap print preview anchor',
                    'searchreplace visualblocks code fullscreen',
                    'insertdatetime media table paste code help wordcount',
                    'lists'
                ],
                toolbar: 'undo redo | formatselect | ' +
                    'bold italic backcolor | alignleft aligncenter ' +
                    'alignright alignjustify | bullist numlist outdent indent | ' +
                    'removeformat',
                content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif; font-size: 14px; -webkit-font-smoothing: antialiased; }'
            }
            if (localStorage.getItem("tablerTheme") === 'dark') {
                options.skin = 'oxide-dark';
                options.content_css = 'dark';
            }
            tinyMCE.init(options);
        })
    </script>
    <script type="text/javascript">
        $(function () {
            $(document).ready(function () {
                $("#TypeID").change(function () {
                    if ($(this).val() != "Ghana") { // It doesn't work over here.
                        $("#showStateLga").show();
                    } else {
                        $("#showStateLga").hide();
                    }
                });
            });
        });
    </script>
}
