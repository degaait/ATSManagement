@model ATSManagementExternal.ViewModels.CivilJusticeExternalRequestModel
@using ATSManagementExternal.Services;
@inject LanguageService _localization
@inject IHttpContextAccessor _context;
@{
    ViewData["Title"] = "Create";
}
<br />

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">    
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">@_localization.Getkey("requests") </h2>
                        </div>
                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-7">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input asp-for="ExterUserId" type="hidden" class="form-control" />
                                        <input asp-for="IntId" type="hidden" class="form-control" />
                                        <div class="mb-3 row" id="DivRequestedDate">
                                            <label asp-for="RequestedDate" class=" col-3 col-form-label"> @_localization.Getkey("created_Date")</label>
                                            <div class="col">
                                                <input asp-for="CreatedDate" class="form-control" readonly />
                                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divRoundTypes">
                                            <label asp-for="RoundTypeId" class=" col-3 col-form-label">@_localization.Getkey("RequestRound")</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.RoundTypeId, new SelectList(Model.RoundTypes, "Value", "Text"), htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="RoundTypeId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divCompletedRequests" style="display:none">
                                            <label asp-for="CompleteRequestID" class=" col-3 col-form-label">@_localization.Getkey("Select_requests")</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.CompleteRequestID, new SelectList(Model.CompletedRequests, "Value", "Text"), htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="CompleteRequestID" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="mb-3 row" id="divServiceType">
                                            <label asp-for="ServiceTypeID" class=" col-3 col-form-label">@_localization.Getkey("service_types")</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.ServiceTypeID, new SelectList(Model.ServiceTypes, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="ServiceTypeID" class="text-danger"></span>
                                            </div>
                                        </div>
                                    
                                       
                                        <div class="mb-3 row" id="divDocType" style="display:none">
                                            <label asp-for="DocId" class=" col-3 col-form-label">@_localization.Getkey("document_type")</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.DocId, new SelectList(Model.LegalStadiesCasetypes, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="DocId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divRequestDetail">
                                            <label asp-for="RequestDetail" class=" col-3 col-form-label">@_localization.Getkey("Description")</label>
                                            <div class="col">
                                                <input asp-for="RequestDetail" class="form-control" />
                                                <span asp-validation-for="RequestDetail" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="priorityQuestionType" style="display:none">
                                            <label class=" col-3 col-form-label">@_localization.Getkey("additional_Question") </label>
                                            <div class="col">
                                                @for (var i = 0; i < Model.PrioritiesQues.Count(); i++)
                                                {
                                                    @Html.CheckBoxFor(model => model.PrioritiesQues[i].IsSelected)

                                                    @Html.HiddenFor(model => model.PrioritiesQues[i].PriorityQueId)
                                                    @Html.DisplayFor(model => model.PrioritiesQues[i].Title)
                                                    <br />
                                                }
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divRequestDetail">
                                            <label asp-for="MoneyAmount" class=" col-3 col-form-label">@_localization.Getkey("MoneyAmmount")</label>
                                            <div class="col">
                                                <input asp-for="MoneyAmount" class="form-control" />
                                                @Html.DropDownListFor(model => model.CurrencyId, new SelectList(Model.Currency, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="MoneyAmount" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="DivDocumentFile">
                                            <label class="col-3 col-form-label">@_localization.Getkey("Attachment")</label>
                                            <div class="col">
                                                <input asp-for="DocumentFile" type="file" class="form-file-button" />
                                                <span asp-validation-for="DocumentFile" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="mb-3 row" id="DivFullName">
                                            <label asp-for="FullName" class=" col-3 col-form-label">@_localization.Getkey("full_Name")</label>
                                            <div class="col">
                                                <input asp-for="FullName" class="form-control" />
                                                <span asp-validation-for="FullName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="DivPhoneNumber">
                                            <label asp-for="PhoneNumber" class=" col-3 col-form-label">@_localization.Getkey("Phone_Number") </label>
                                            <div class="col">
                                                <input asp-for="PhoneNumber" class="form-control" />
                                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="DivRequestedDate">
                                            <label asp-for="EmailAddress" class=" col-3 col-form-label">@_localization.Getkey("Email_Address") </label>
                                            <div class="col">
                                                <input asp-for="EmailAddress" class="form-control" />
                                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <!--New columns-->
                                        <div class="mb-3 row" id="divAdrtype" style="display:none">
                                            <label asp-for="Adrtype" class=" col-3 col-form-label">@_localization.Getkey("Adrtype")</label>
                                            <div class="col">
                                                <input asp-for="Adrtype" class="form-control" />
                                                <span asp-validation-for="Adrtype" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divClaimant" style="display:none">
                                            <label asp-for="Claimant" class=" col-3 col-form-label">@_localization.Getkey("Claimant")</label>
                                            <div class="col">
                                                <input asp-for="Claimant" class="form-control" />
                                                <span asp-validation-for="Claimant" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divActingAs" style="display:none">
                                            <label asp-for="ActingAs" class=" col-3 col-form-label">@_localization.Getkey("ActingAs")</label>
                                            <div class="col">
                                                <input asp-for="ActingAs" class="form-control" />
                                                <span asp-validation-for="ActingAs" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divRespondent" style="display:none">
                                            <label asp-for="Respondent" class=" col-3 col-form-label">@_localization.Getkey("Respondent")</label>
                                            <div class="col">
                                                <input asp-for="Respondent" class="form-control" />
                                                <span asp-validation-for="Respondent" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divCaseType" style="display:none">
                                            <label asp-for="CaseType" class=" col-3 col-form-label">@_localization.Getkey("CaseType")</label>
                                            <div class="col">
                                                <input asp-for="CaseType" class="form-control" />
                                                <span asp-validation-for="CaseType" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divSpecialization" style="display:none">
                                            <label asp-for="Specialization" class=" col-3 col-form-label">@_localization.Getkey("Specialization")</label>
                                            <div class="col">
                                                <input asp-for="Specialization" class="form-control" />
                                                <span asp-validation-for="Specialization" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divCountry" style="display:none">
                                            <label asp-for="Country" class=" col-3 col-form-label">@_localization.Getkey("Country")</label>
                                            <div class="col">
                                                <input asp-for="Country" class="form-control" />
                                                <span asp-validation-for="Country" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divCourtCenter" style="display:none">
                                            <label asp-for="CourtCenter" class=" col-3 col-form-label">@_localization.Getkey("CourtCenter")</label>
                                            <div class="col">
                                                <input asp-for="CourtCenter" class="form-control" />
                                                <span asp-validation-for="CourtCenter" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divDateOfAdjournment" style="display:none">
                                            <label asp-for="DateOfAdjournment" class=" col-3 col-form-label">@_localization.Getkey("DateOfAdjournment")</label>
                                            <div class="col">
                                                <input asp-for="DateOfAdjournment" class="form-control" />
                                                <span asp-validation-for="DateOfAdjournment" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divLitigationType" style="display:none">
                                            <label asp-for="LitigationType" class=" col-3 col-form-label">@_localization.Getkey("LitigationType")</label>
                                            <div class="col">
                                                <input asp-for="LitigationType" class="form-control" />
                                                <span asp-validation-for="LitigationType" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divJursidiction" style="display:none">
                                            <label asp-for="Jursidiction" class=" col-3 col-form-label">@_localization.Getkey("Jursidiction")</label>
                                            <div class="col">
                                                <input asp-for="Jursidiction" class="form-control" />
                                                <span asp-validation-for="Jursidiction" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divBench" style="display:none">
                                            <label asp-for="Bench" class=" col-3 col-form-label">@_localization.Getkey("Bench")</label>
                                            <div class="col">
                                                <input asp-for="Bench" class="form-control" />
                                                <span asp-validation-for="Bench" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divPlaintiful" style="display:none">
                                            <label asp-for="Plaintiful" class=" col-3 col-form-label">@_localization.Getkey("Plaintiful")</label>
                                            <div class="col">
                                                <input asp-for="Plaintiful" class="form-control" />
                                                <span asp-validation-for="Plaintiful" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divDefendent" style="display:none">
                                            <label asp-for="Defendent" class=" col-3 col-form-label">@_localization.Getkey("Defendent")</label>
                                            <div class="col">
                                                <input asp-for="Defendent" class="form-control" />
                                                <span asp-validation-for="Defendent" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row" id="divDateofJudgement" style="display:none">
                                            <label asp-for="DateofJudgement" class=" col-3 col-form-label">@_localization.Getkey("DateofJudgement")</label>
                                            <div class="col">
                                                <input asp-for="DateofJudgement" class="form-control" />
                                                <span asp-validation-for="DateofJudgement" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            <div class="card-footer text-end">
                                <div class="d-flex">
                                    <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-scrollable">                                         
                                        @_localization.Getkey("send")
                                    </a>
                                    <a asp-action="Index">@_localization.Getkey("back")</a>
                                </div>
                            </div>
                            <div class="modal modal-blur fade" id="modal-scrollable" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog modal-full-width modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Terms and Conditions</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            @Html.Raw(Model.TermsAndCondionts)
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn me-auto" data-bs-dismiss="modal">@_localization.Getkey("close")</button>
                                            <button type="submit" value="Save" class="btn btn-primary" data-bs-dismiss="modal">@_localization.Getkey("Accept_Submit")</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let options = {
                selector: '#RequestDetail',
                height: 300,
                menubar: true,
                statusbar: false,
                plugins: [
                    'advlist autolink lists link image charmap print preview anchor',
                    'searchreplace visualblocks code fullscreen',
                    'insertdatetime media table paste code help wordcount',
                    'lists'
                ],
                toolbar: 'undo redo | formatselect | ' +
                    'bold italic backcolor | alignleft aligncenter ' +
                    'alignright alignjustify | bullist numlist outdent indent | ' +
                    'removeformat',
                content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif; font-size: 14px; -webkit-font-smoothing: antialiased; }'
            }
            if (localStorage.getItem("tablerTheme") === 'dark') {
                options.skin = 'oxide-dark';
                options.content_css = 'dark';
            }
            tinyMCE.init(options);
        })
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let options = {
                selector: '#AppointmentDetail',
                height: 300,
                menubar: true,
                statusbar: false,
                plugins: [
                    'advlist autolink lists link image charmap print preview anchor',
                    'searchreplace visualblocks code fullscreen',
                    'insertdatetime media table paste code help wordcount',
                    'lists'
                ],
                toolbar: 'undo redo | formatselect | ' +
                    'bold italic backcolor | alignleft aligncenter ' +
                    'alignright alignjustify | bullist numlist outdent indent | ' +
                    'removeformat',
                content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif; font-size: 14px; -webkit-font-smoothing: antialiased; }'
            }
            if (localStorage.getItem("tablerTheme") === 'dark') {
                options.skin = 'oxide-dark';
                options.content_css = 'dark';
            }
            tinyMCE.init(options);
        })
    </script>

    <script type="text/javascript">
        $(function () {
            $(document).ready(function () {
                $("#ServiceTypeID").change(function () {
                    var value = $("#ServiceTypeID").val();
                    
                    var url = '@Url.Content("~/")' + "ExternalRequests/GetDoctypes";
                    var ddlsource = "#ServiceTypeID";
                    $.getJSON(url, { ServiceTypeID: $(ddlsource).val() }, function (data) {
                        var items = '';
                        $("#DocId").empty();
                        $.each(data, function (i, subcategory) {
                            items += "<option value='" + subcategory.value + "'>" + subcategory.text + "</option>";
                        });
                        $('#DocId').html(items);
                    });

                    if (value == "F935DCD1-2651-4C64-947C-0A877F652FB5" ||
                        value == "ACB92222-4872-4A9D-8EDB-8BCD5317129A" ||
                        value == "6E00B0EA-7B4D-40C4-8289-A566FE16E88E" ||
                        value == "92FC1FC5-95D2-4250-98FB-0BA862F6DB02" ||
                        value == "C792938C-7952-488C-A23E-1A27F8B2B8E6") {
                        $("#divDocType").show();
                        $("#priorityQuestionType").hide();
                    }
                    else {
                        $("#divDocType").hide();
                        $("#priorityQuestionType").show();
                    }
                    if (value == "CB41651E-F316-4C57-8466-38326777DFD8") {
                        //Litigations
                        $("#divLitigationType").show();
                        $("#divJursidiction").show();
                        $("#divDateofJudgement").show();
                        $("#divBench").show();
                        $("#divPlaintiful").show();
                        $("#divDefendent").show();

                        $("#divCaseType").hide();
                        $("#divSpecialization").hide();
                        $("#divCountry").hide();
                        $("#divCourtCenter").hide();
                        $("#divClaimant").hide();
                        $("#divRespondent").hide();
                        $("#divDateOfAdjournment").hide();
                        $("#divAdrtype").hide();
                        $("#divActingAs").hide();





                    }
                    else if (value == "F8CB3338-677B-410A-BAF8-89A7C9BDF6BD") {
                        //ADR Activities
                        $("#divAdrtype").show();
                        $("#divRespondent").show();
                        $("#divClaimant").show();
                        $("#divActingAs").show();

                        $("#divCaseType").hide();
                        $("#divSpecialization").hide();
                        $("#divCountry").hide();
                        $("#divCourtCenter").hide();
                        $("#divDateOfAdjournment").hide();
                        $("#divLitigationType").hide();
                        $("#divJursidiction").hide();
                        $("#divDateofJudgement").hide();
                        $("#divBench").hide();
                        $("#divPlaintiful").hide();
                        $("#divDefendent").hide();
                    }
                    else if (value == "0A26804F-2017-4DC0-A9D6-C0061D22A173") {
                        //Internal case
                        $("#divCaseType").show();
                        $("#divSpecialization").show();
                        $("#divCountry").show();
                        $("#divCourtCenter").show();
                        $("#divClaimant").show();
                        $("#divRespondent").show();
                        $("#divDateOfAdjournment").show();

                        $("#divAdrtype").hide();
                        $("#divActingAs").hide();
                        $("#divLitigationType").hide();
                        $("#divJursidiction").hide();
                        $("#divDateofJudgement").hide();
                        $("#divBench").hide();
                        $("#divPlaintiful").hide();
                        $("#divDefendent").hide();
                    }
                    else {
                        $("#divCaseType").hide();
                        $("#divSpecialization").hide();
                        $("#divCountry").hide();
                        $("#divCourtCenter").hide();
                        $("#divClaimant").hide();
                        $("#divRespondent").hide();
                        $("#divDateOfAdjournment").hide();
                        $("#divAdrtype").hide();
                        $("#divActingAs").hide();
                        $("#divLitigationType").hide();
                        $("#divJursidiction").hide();
                        $("#divDateofJudgement").hide();
                        $("#divBench").hide();
                        $("#divPlaintiful").hide();
                        $("#divDefendent").hide();
                    }
                });

            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#RoundTypeId").change(function () {
                var orderId = $("#RoundTypeId").val();
                if (orderId == "2") {
                    $("#divCompletedRequests").show();
                }
                else {
                    $("#divCompletedRequests").hide();
                }
            });
        });

    </script>
}
