@using Microsoft.AspNetCore.Http;
@using ATSManagementExternal.Services;
@inject LanguageService _localization
@inject IHttpContextAccessor _context;
@{
    ViewData["Title"] = "AboutUs";
}


<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("our_services")
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">

                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <div class="card-stamp">
                            <div class="card-stamp-icon bg-yellow">
                                <img src="~/dist/img/water-melon.png" />
                            </div>
                        </div>
                        <div class="card-header" style="background: #263d6a;">
                            <h3 class="card-title text-white"> @_localization.Getkey("Legal_Advices")</h3>
                        </div>
                        <div class="card-body">

                            <p class="text-muted" style="display: flex; justify-content: center; font-family: serif; font-size: larger; }"> @Html.Raw(@_localization.Getkey("legal_advice_description"))</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <div class="card-header" style="background: #263d6a;">
                            <h2 class="card-title text-white"> @_localization.Getkey("litigations")</h2>
                        </div>
                        <div class="card-body">

                            <p class="text-muted" style="justify-content: center; font-family: serif; font-size: larger; }">
                                @Html.Raw(@_localization.Getkey("litigation_description"))
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <div class="card-status-bottom bg-success"></div>
                        <div class="card-header" style="background: #263d6a;">
                            <h3 class="card-title text-white"> @_localization.Getkey("Contract_Negotation")</h3>
                        </div>
                        <div class="card-body">

                            <p class="text-muted" style="display: flex; justify-content: center; font-family: serif; font-size: larger; }">
                                @Html.Raw(@_localization.Getkey("contract_Negotiation_description"))
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <div class="card-status-start bg-primary"></div>
                        <div class="card-header" style="background: #263d6a;">
                            <h3 class="card-title text-white"> @_localization.Getkey("Inspection_Followup")</h3>
                        </div>
                        <div class="card-body">

                            <p class="text-muted" style="display: flex; justify-content: center; font-family: serif; font-size: larger; }">
                                @Html.Raw(@_localization.Getkey("Inspection_Followup_description"))
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <div class="ribbon ribbon-top bg-yellow">
                            <!-- Download SVG icon from http://tabler-icons.io/i/star -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 17.75l-6.172 3.245l1.179 -6.873l-5 -4.867l6.9 -1l3.086 -6.253l3.086 6.253l6.9 1l-5 4.867l1.179 6.873z" /></svg>
                        </div>
                        <div class="card-header" style="background: #263d6a;">
                            <h3 class="card-title text-white">  @_localization.Getkey("International_Cases")</h3>
                        </div>
                        <div class="card-body">
                            <p class="text-muted" style="display: flex; justify-content: center; font-family: serif; font-size: larger; }">
                                @Html.Raw(@_localization.Getkey("International_Cases_description"))
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card bg-primary-lt">
                        <div class="card-header" style="background: #263d6a;" >
                            <h3 class="card-title text-white"> @_localization.Getkey("registration")</h3>
                        </div>
                        <div class="card-body">
                            <p class="text-muted" style="display: flex; justify-content: center; font-family: serif; font-size: larger; }"> @Html.Raw(@_localization.Getkey("registration_description"))</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

