@model ATSManagementExternal.ViewModels.LoginModels
@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>ATS Login</title>
    <!-- CSS files -->
    <link href="~/dist/css/tabler.min.css?1684106062" rel="stylesheet" asp-append-version="true" />
    <link href="~/dist/css/tabler-flags.min.css?1684106062" rel="stylesheet" asp-append-version="true" />
    <link href="~/dist/css/tabler-payments.min.css?1684106062" rel="stylesheet" asp-append-version="true" />
    <link href="~/dist/css/tabler-vendors.min.css?1684106062" rel="stylesheet" asp-append-version="true" />
    <link href="~/dist/css/demo.min.css?1684106062" rel="stylesheet" asp-append-version="true" />
    <style>
        @@import url('https://rsms.me/inter/inter.css');
        :root {
            --tblr-font-sans-serif: 'Inter Var', -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif;
        }

        body {
            font-feature-settings: "cv03", "cv04", "cv11";
        }
    </style>
</head>
<body class=" d-flex flex-column">
    <script src="/dist/js/demo-theme.min.js?1684106062"></script>
    <div class="page page-center">
        <div class="container container-tight py-4">
            <div class="text-center mb-4">
                <a href="." class="navbar-brand navbar-brand-autodark"><img src="~/dist/img/main_logo.png" style="width:300px; height:200px; object-fit:cover" alt=""></a>
            </div>
            <div class="card card-md">
                <div class="card-body">
                    <h2 class="h2 text-center mb-4">Login to your account</h2>
                    <div asp-validation-summary="All"></div>
                    <form asp-action="Login" method="post" asp-antiforgery="true">
                        <div class="mb-3">
                            <label class="form-label">Email address</label>
                            <input asp-for="UserName" class="form-control" placeholder="username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">
                                Password                               
                            </label>
                            <div class="input-group input-group-flat">
                                <input asp-for="Password" class="form-control" placeholder="password" autocomplete="off" type="password" />
                                <span class="input-group-text">
                                    <a href="#" class="link-secondary" title="Show password" data-bs-toggle="tooltip">
                                        <!-- Download SVG icon from http://tabler-icons.io/i/eye -->
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" /><path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" /></svg>
                                    </a>
                                </span>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-footer">
                            <button type="submit" class="btn btn-primary w-100">Sign in</button>
                        </div>
                    </form>
                </div>
                <div class="hr-text">
                    <span class="nav-link">
                        <a asp-action="Index" asp-controller="Home">Home</a>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="~/dist/js/tabler.min.js?1684106062" defer asp-append-version="true"></script>
    <script src="~/dist/js/demo.min.js?1684106062" defer asp-append-version="true"></script>
    <script src="~/Scripts/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>

</body>
