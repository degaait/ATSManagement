@model ATSManagement.Models.TblSpecificPlan

@{
    ViewData["Title"] = "Details";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Specific annual plan
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Details</h4>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    <label asp-for="Title" class="col-form-label-m">Title</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Title)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="Title" class="col-form-label-m">Description</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.Raw(Model.Description)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="Title" class="col-form-label-m">Created date</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CreatedDate)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="Title" class="col-form-label-m">Modification date</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ModificationDate)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="Title" class="col-form-label-m">Created by</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CreatedByNavigation.FirstName)
                                    @Html.DisplayFor(model => model.CreatedByNavigation.MidleName)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="Title" class="col-form-label-m">Annual plan</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.InspectionPlan.PlanTitle)
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <a asp-action="Edit" asp-route-id="@Model?.SpecificPlanId">Edit</a> |
                                <a asp-action="Index" asp-controller="SpecificPlans" asp-route-InspectionPlanId="@ViewBag.InspectionPlanId">Back to List</a>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

