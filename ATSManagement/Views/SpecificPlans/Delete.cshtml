@model ATSManagement.Models.TblSpecificPlan
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
}
<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("specific_plans")  
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">@_localization.Getkey("are_you_sure_todelete")</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        <label asp-for="Title" class="col-form-label-m">@_localization.Getkey("title")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Title)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Title" class="col-form-label-m">@_localization.Getkey("Description")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.Raw(Model.Description)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Title" class="col-form-label-m">@_localization.Getkey("CreatedDate")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CreatedDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Title" class="col-form-label-m">@_localization.Getkey("modificationDate")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.ModificationDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Title" class="col-form-label-m">@_localization.Getkey("created_by")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CreatedByNavigation.FirstName)
                                        @Html.DisplayFor(model => model.CreatedByNavigation.MidleName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Title" class="col-form-label-m">@_localization.Getkey("annual_plan")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.InspectionPlan.PlanTitle)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="SpecificPlanId" />
                                    <input type="submit" value="@_localization.Getkey("delete")" class="btn btn-danger" /> |
                                    <a asp-action="Index" asp-controller="SpecificPlans" asp-route-InspectionPlanId="@ViewBag.InspectionPlanId">@_localization.Getkey("backlist")</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

