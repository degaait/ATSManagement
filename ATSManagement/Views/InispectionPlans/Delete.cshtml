@model ATSManagement.Models.TblInspectionPlan
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = _localization.Getkey("annual_plans")+":Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("annual_plans")
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title btn-danger">@_localization.Getkey("@_localization.Getkey(\"title\")")</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        <label asp-for="PlanTitle" class="col-form-label">@_localization.Getkey("title")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.PlanTitle)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="PlanDescription" class="col-form-label">@_localization.Getkey("Description")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.Raw(Model.PlanDescription)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="CreationDate" class="col-form-label">@_localization.Getkey("CreatedDate")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CreationDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="ModificationDate" class="col-form-label">@_localization.Getkey("modificationDate")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.ModificationDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="YearId" class="col-form-label">@_localization.Getkey("inspection_year") </label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Year.Year)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="User" class="col-form-label">@_localization.Getkey("created_by") </label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.MidleName)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="InspectionPlanId" />
                                    <input type="submit" value="@_localization.Getkey("delete")" class="btn btn-danger" /> |
                                    <a asp-action="Index">@_localization.Getkey("backlist")</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


