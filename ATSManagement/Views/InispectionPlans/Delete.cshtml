@model ATSManagement.Models.TblInspectionPlan
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Inistitutions
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title btn-danger">Are you sure you want to delete this?</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        <label asp-for="PlanTitle" class="col-form-label-m">Title</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.PlanTitle)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="PlanDescription" class="col-form-label-m">Description</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.PlanDescription)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="CreationDate" class="col-form-label-m">Creation date</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CreationDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="ModificationDate" class="col-form-label-m">Modification date</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.ModificationDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Year" class="col-form-label-m">Inspection date</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Year.Year)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="User" class="col-form-label-m">Created by</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.MidleName)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="InspectionPlanId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                                    <a asp-action="Index">Back to List</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


