@model ATSManagement.Models.TblSpecificPlan
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @_localization.Getkey("specific_plans") + "Details";
}

<div class="page-wrapper">  
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2 class="page-title">
                    @_localization.Getkey("specific_plans")=>@_localization.Getkey("Detail")
                </h2>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        <label asp-for="Title" class="col-form-label">@_localization.Getkey("title")</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-sm-2">
                        <label asp-for="Title" class="col-form-label">@_localization.Getkey("Description")</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        <label asp-for="Title" class="col-form-label">@_localization.Getkey("created_Date")</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>
                    <dt class="col-sm-2">
                        <label asp-for="ModificationDate" class="col-form-label">@_localization.Getkey("modificationDate")</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ModificationDate)
                    </dd>
                    <dt class="col-sm-2">
                        <label asp-for="Title" class="col-form-label">@_localization.Getkey("created_by")</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedByNavigation.FirstName)
                        @Html.DisplayFor(model => model.CreatedByNavigation.MidleName)
                    </dd>
                    <dt class="col-sm-2">
                        <label asp-for="Title" class="col-form-label"> @_localization.Getkey("annual_plan")</label>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.InspectionPlan.PlanTitle)
                    </dd>
                </dl>
            </div>
            <div class="card-footer text-end">
                <div class="d-flex">
                    <a asp-action="Index">@_localization.Getkey("backlist")</a>
                </div>
            </div>
        </div>
    </div>
</div>


