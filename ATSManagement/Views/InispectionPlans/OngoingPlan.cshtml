@model IEnumerable<ATSManagement.Models.TblInspectionPlan>
@inject AtsdbContext ats;
@inject IHttpContextAccessor httpsSession;
@{
    ViewData["Title"] = "Yearly Plans";
    Guid userId = Guid.Parse(httpsSession.HttpContext.Session.GetString("userId"));
    var user = (from item in ats.TblInternalUsers where item.UserId == userId select item).FirstOrDefault();

}
<style type="text/css">
    .table thead th {
        text-transform: capitalize !important;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: .825rem !important;
        font-weight: bolder;
    }
</style>
<link href="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.css" rel="stylesheet">
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Yearly Inispection plans
                </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
                <div class="btn-list">
                    <a asp-action="Create" asp-controller="InispectionPlans" class="btn btn-primary d-none d-sm-inline-block">
                        <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
                        Create new
                    </a>
                    <a href="#" class="btn btn-primary d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#modal-report" aria-label="Create new report">
                        <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Plans</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <table class="table table-bordered" id="role">
                                <thead>
                                    <tr>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Assigned date
                                        </th>
                                        <th>
                                            Due date
                                        </th>
                                        <th>
                                            Evaluation criteria
                                        </th>
                                        <th>
                                            Engagement letter
                                        </th>
                                        <th>
                                            Targeted Inistitutions
                                        </th>
                                        <th>
                                            Task status
                                        </th>
                                        <th>
                                            User Uproval
                                        </th>
                                        <th>
                                            Team Uproval
                                        </th>
                                        <th>
                                            Department Uproval
                                        </th>
                                        <th>
                                            Deputy Uproval
                                        </th>
                                        <th>
                                            Inpection year
                                        </th>
                                        <th>
                                            Assigned to
                                        </th>
                                        <th>
                                            Created by
                                        </th>
                                        <th>
                                            Final report
                                        </th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        var instr = (from ints in ats.TblPlanInistitutions
                                                     join related in ats.TblInistitutions on ints.InistId equals related.InistId
                                                     where ints.PlanId == item.InspectionPlanId
                                                     select new
                                                     {
                                                         Name = related.Name
                                                     }).ToList();
                                        var team = ats.TblTeams.Where(s => s.TeamId == item.TeamId).FirstOrDefault();
                                        var users = (from items in ats.TblAssignedYearlyPlans
                                                     join plans in ats.TblInspectionPlans on items.PlanId equals plans.InspectionPlanId
                                                     join assignee in ats.TblInternalUsers on items.AssignedTo equals assignee.UserId
                                                     where items.PlanId == item.InspectionPlanId
                                                     select assignee).ToList();
                                        var assingmentInformation = ats.TblAssignedYearlyPlans.Where(s => s.PlanId == item.InspectionPlanId).FirstOrDefault();
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PlanTitle)
                                            </td>
                                            <td>
                                                @Html.Raw(item.PlanDescription)
                                            </td>
                                            <td>
                                                @if (assingmentInformation != null && assingmentInformation.AssignedDate != null)
                                                {
                                                    @Html.Raw(assingmentInformation.AssignedDate)
                                                }
                                            </td>
                                            <td>
                                                @if (assingmentInformation != null && assingmentInformation.DueDate != null)
                                                {
                                                    @Html.Raw(assingmentInformation.DueDate)
                                                }
                                            </td>
                                            <td>
                                                @if (assingmentInformation != null && assingmentInformation.EvaluationCheckLists != null)
                                                {
                                                    @Html.Raw(assingmentInformation.EvaluationCheckLists)
                                                }
                                            </td>
                                            <td>
                                                @if (assingmentInformation != null && assingmentInformation.EngagementLetter != null)
                                                {
                                                    <a class="btn btn-primary" asp-action="DownloadFile" asp-route-path="@assingmentInformation.EngagementLetter">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-download" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                            <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                                                            <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
                                                            <path d="M12 17v-6"></path>
                                                            <path d="M9.5 14.5l2.5 2.5l2.5 -2.5"></path>
                                                        </svg>
                                                        Download
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                @Html.Raw(item.Pro.StatusWithColor)
                                                @if (team != null)
                                                {
                                                    <span>Team:- @team.TeamName</span>
                                                }
                                            </td>
                                            <td>
                                                @foreach (var items in instr)
                                                {
                                                    @Html.DisplayFor(modelItem => items.Name) <br />
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsUserUprovedNavigation != null)
                                                {
                                                    @Html.Raw(item.IsUserUprovedNavigation.StatusWithColor)
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsUpprovedbyTeamNavigation != null)
                                                {
                                                    @Html.Raw(item.IsUpprovedbyTeamNavigation.StatusWithColor)
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsUpprovedbyDepartmentNavigation != null)
                                                {
                                                    @Html.Raw(item.IsUpprovedbyDepartmentNavigation.StatusWithColor)
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsUprovedByDeputyNavigation != null)
                                                {
                                                    @Html.Raw(item.IsUprovedByDeputyNavigation.StatusWithColor)
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Year.Year)
                                            </td>
                                            <td>
                                                @if (users != null)
                                                {
                                                    foreach (var collectiontem in users)
                                                    {
                                                        @Html.DisplayFor(modelItem => collectiontem.FirstName)
                                                        @Html.DisplayFor(modelItem => collectiontem.MidleName)
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.FirstName)
                                            </td>
                                            <td>
                                                @if (item.FinalReport != null)
                                                {
                                                    <a class="btn btn-primary" asp-action="DownloadFile" asp-route-path="@item.FinalReport">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-download" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                            <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                                                            <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
                                                            <path d="M12 17v-6"></path>
                                                            <path d="M9.5 14.5l2.5 2.5l2.5 -2.5"></path>
                                                        </svg>
                                                        Download
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-list flex-nowrap">
                                                    <div class="dropdown">
                                                        <button class="btn dropdown-toggle align-text-top" data-bs-toggle="dropdown">
                                                            Actions
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-end">
                                                            @if ((user.IsDeputy == true || user.IsSuperAdmin == true || user.IsDepartmentHead == true || user.IsTeamLeader == true)&&item.Pro.ProstatusTitle=="Completed")
                                                            {
                                                                <a class="dropdown-item" asp-action="UppdateDesicionStatus" asp-route-id="@item.InspectionPlanId">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-circle-check-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                        <path d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-1.293 5.953a1 1 0 0 0 -1.32 -.083l-.094 .083l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.403 1.403l.083 .094l2 2l.094 .083a1 1 0 0 0 1.226 0l.094 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z" stroke-width="0" fill="currentColor"></path>
                                                                    </svg>&nbsp;
                                                                    Uppdate Upproval Status
                                                                </a>
                                                            }
                                                            <a class="dropdown-item" asp-action="Index" asp-controller="SpecificPlans" asp-route-InspectionPlanId="@item.InspectionPlanId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>&nbsp;
                                                                Specific plans
                                                            </a>
                                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.InspectionPlanId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-pencil-plus" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4"></path>
                                                                    <path d="M13.5 6.5l4 4"></path>
                                                                    <path d="M16 19h6"></path>
                                                                    <path d="M19 16v6"></path>
                                                                </svg>&nbsp; Edit
                                                            </a>
                                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.InspectionPlanId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-list-details" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M13 5h8"></path>
                                                                    <path d="M13 9h5"></path>
                                                                    <path d="M13 15h8"></path>
                                                                    <path d="M13 19h5"></path>
                                                                    <path d="M3 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                    <path d="M3 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                </svg> &nbsp; Detail
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.js"></script>
    <script type="text/javascript">
        new DataTable('#role', {
            deferRender: true,
            scrollCollapse: true,
            scroller: true,
        });
    </script>
    <script type="text/javascript">
        var dp = $("#Date").datepicker({
            format: "dd/mm/yyyy",
            viewMode: "years",
            minViewMode: "years",
            autoclose: true
        });
        dp.on('changeDate', function (e) {
            $(this).datepicker("setDate", new Date(e.date.getFullYear() + 1, e.date.getMonth(), 0))
        });
    </script>
}