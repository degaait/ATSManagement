@model ATSManagement.ViewModels.InspectionChatModel
@using ATSManagement.Services;
@inject AtsdbContext _context;
@inject LanguageService _localization
@inject IHttpContextAccessor httpsSession;
@{
    ViewData["Title"] = "AppointmentChats";
    Guid userId = Guid.Parse(httpsSession.HttpContext.Session.GetString("userId"));
    var user = (from items in _context.TblInternalUsers where items.UserId == userId select items).FirstOrDefault();

    var chatsDepStateMinister = (from items in _context.TblInspectionChats
                                 join users in _context.TblInternalUsers on items.UserId equals users.UserId
                                 where items.SpecificPlanId == Model.SpecificPlanId && items.ForStateMinister == true && items.IsDephead == true
                                 select new
                                 {
                                     date = items.Datetime,
                                     ExpertFullName = users.FirstName + " " + users.MidleName,
                                     message = items.ChatContent,
                                     IsExpert = items.IsExpert,
                                     IsDepHead = items.IsDephead,
                                     userId = items.UserId,
                                     filePath = items.FilePath
                                 }
                ).ToList();
    var chatsDepExpert = (from items in _context.TblInspectionChats
                          join users in _context.TblInternalUsers on items.UserId equals users.UserId
                          where items.SpecificPlanId == Model.SpecificPlanId &&
                          items.IsExpert == true && items.IsDephead == true
                          select new
                          {
                              date = items.Datetime,
                              ExpertFullName = users.FirstName + " " + users.MidleName,
                              message = items.ChatContent,
                              IsExpert = items.IsExpert,
                              IsDepHead = items.IsDephead,
                              userId = items.UserId,
                              filePath = items.FilePath
                          }
            ).ToList();
    var deputyChats = (from items in _context.TblInspectionChats
                       join users in _context.TblInternalUsers on items.UserId equals users.UserId
                       where items.SpecificPlanId == Model.SpecificPlanId && items.ForStateMinister == true
                       select new
                       {
                           date = items.Datetime,
                           ExpertFullName = users.FirstName + " " + users.MidleName,
                           message = items.ChatContent,
                           IsExpert = items.IsExpert,
                           IsDepHead = items.IsDephead,
                           userId = items.UserId,
                           filePath = items.FilePath
                       }
        ).ToList();
    var expertChats = (from items in _context.TblInspectionChats
                       join users in _context.TblInternalUsers on items.UserId equals users.UserId
                       where items.SpecificPlanId == Model.SpecificPlanId && items.IsExpert == true && items.IsDephead == true
                       select new
                       {
                           date = items.Datetime,
                           ExpertFullName = users.FirstName + " " + users.MidleName,
                           message = items.ChatContent,
                           IsExpert = items.IsExpert,
                           IsDepHead = items.IsDephead,
                           userId = items.UserId,
                           filePath = items.FilePath
                       }
                ).ToList();
    var deputy = (from stateMinister in _context.TblInternalUsers where stateMinister.IsDeputy == true select stateMinister).ToList();
}

