@model ATSManagement.ViewModels.RequestModel

@{
    ViewData["Title"] = "Assign To Department";
}
<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        UnAssigned Request
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Assign</h4>
                        </div>
                        <form asp-action="AssignToDepartment">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="RequestId" />
                                        <div class="mb-3 row">
                                            <label asp-for="RequestDetail" class="col-2 col-form-label">Request Detail</label>
                                            <div class="col">
                                                @Html.Raw(Model.RequestDetail)
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="ServiceTypeID" class="col-2 col-form-label">Service type</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.ServiceTypeID, new SelectList(Model.ServiceTypes, "Value", "Text"), htmlAttributes: new { @class = "form-select", @readonly = true })
                                                <span asp-validation-for="ServiceTypeID" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="RequestedBy" class="col-2 col-form-label">Requested User</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.RequestedBy, new SelectList(Model.RequestedUsers, "Value", "Text"), htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="RequestedBy" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="CreatedDate" class="col-2 col-form-label">Requested Date</label>
                                            <div class="col">
                                                <input asp-for="CreatedDate" class="form-control" readonly />
                                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="CreatedBy" class="col-2 col-form-label">Requested by</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.InistId, new SelectList(Model.Intitutions, "Value", "Text"), htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="DepId" class="col-2 col-form-label">Departments</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.DepId, new SelectList(Model.Deparments, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="DepId" class="text-danger"></span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-end">
                                <div class="d-flex">
                                    <div class="form-group">
                                        <input type="submit" value="Assign" class="btn btn-primary" />
                                        <a asp-action="Index">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
