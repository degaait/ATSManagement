@model ATSManagement.Models.TblLegalAdviceReport

@{
    ViewData["Title"] = "Create";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        የረቂቅ ውል ምርመራ/ዝግጅት አፈፃፀም ሪፖርት
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">
                                የረቂቅ ውል ምርመራ/ዝግጅት
                            </h4>
                        </div>
                        <form asp-action="Create">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="mb-2 row">
                                            <label asp-for="Id" class="col-3 col-form-label"> ተገልጋዮች</label>
                                            <div class="col">
                                                <select asp-for="Id" class="form-select" asp-items="ViewBag.ServantTypes"></select>
                                                <span asp-validation-for="Id" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-2 row">
                                            <label asp-for="Amount" class="col-3 col-form-label">መጠን</label>
                                            <div class="col">
                                                <input asp-for="Amount" type="number" class="form-control" />
                                                <span asp-validation-for="Amount" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-2 row">
                                            <label asp-for="Investigation" class="col-3 col-form-label">ምርመራ</label>
                                            <div class="col">
                                                <input asp-for="Investigation" type="number" class="form-control" />
                                                <span asp-validation-for="Investigation" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-2 row">
                                            <label asp-for="Month" class="col-3 col-form-label">ወር</label>
                                            <div class="col">
                                                <select asp-for="Month" class="form-select" asp-items="ViewBag.Month"></select>
                                            </div>
                                        </div>
                                        <div class="mb-2 row">
                                            <label asp-for="Year" class="col-3 col-form-label">ዓመት</label>
                                            <div class="col">
                                                <select asp-for="Year" class="form-select" asp-items="ViewBag.Year"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-end">
                                <div class="d-flex">
                                    <input type="submit" value="Create" class="btn btn-primary" />|
                                    <a asp-action="Index">Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

