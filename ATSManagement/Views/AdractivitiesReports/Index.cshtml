@model IEnumerable<ATSManagement.Models.TblAdractivitiesReport>

@{
    ViewData["Title"] = "የ ADR ስራዎች አፈፃፀም ሪፖርት ";
}
<style type="text/css">
    .table thead th {
        text-transform: capitalize !important;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: .825rem !important;
        font-weight: bolder;
    }
</style>
<link href="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.css" rel="stylesheet">
<!-- Page header -->
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    የ ADR ስራዎች አፈፃፀም ሪፖርት
                </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
                <div class="btn-list">
                    <a asp-action="Create" asp-controller="AdractivitiesReports" class="btn btn-primary d-none d-sm-inline-block">
                        <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
                        Create new
                    </a>
                    <a href="#" class="btn btn-primary d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#modal-report" aria-label="Create new report">
                        <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">የADR ስራዎች አፈፃፀም ሪፖርቶች</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <table class="table table-striped table-bordered" id="role">
                                <thead>
                                    <tr>

                                        <th>
                                            ክንውን
                                        </th>
                                        <th>
                                            ሴት
                                        </th>
                                        <th>
                                            ህፃን
                                        </th>
                                        <th>
                                            አረጋዊያን
                                        </th>
                                        <th>
                                            HIV ፖዘቲቭ
                                        </th>
                                        <th>
                                            ወንድ
                                        </th>
                                        <th>
                                            ሌሎች
                                        </th>
                                        <th>
                                            ከውል ውጭ ኃላፊነት
                                        </th>
                                        <th>
                                            ቤተሰብ
                                        </th>
                                        <th>
                                            ውርስ/ንብረት
                                        </th>
                                        <th>
                                            አሰሪና ሰራተኛ
                                        </th>
                                        <th>
                                            ሌሎች
                                        </th>
                                        <th>
                                            በድርድሩ የተጠየቀው የገንዘብ መጠን
                                        </th>
                                        <th>
                                            የተወሰነው የገንዘብ መጠን
                                        </th>
                                        <th>
                                            የላከው
                                        </th>

                                        <th>
                                            ዓመት
                                        </th>
                                        <th>
                                            ወር
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Type.TypeNames)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Womens)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Childrens)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.WomeElders)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Hivpositives)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Mens)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.OtherServantType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.OutofResponsibilty)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Family)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Property)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AsserinaSerategna)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LelochGudayAyine)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.YediridirGenzebMeten)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.YeteWosenewuGenzebMeten)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedByNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.CreatedByNavigation.MidleName)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Month.MonthName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Year.Year)
                                            </td>
                                            <td>
                                                <div class="btn-list flex-nowrap">
                                                    <div class="dropdown">
                                                        <button class="btn dropdown-toggle align-text-top" data-bs-toggle="dropdown">
                                                            Actions
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-end">
                                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-pencil-plus" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4"></path>
                                                                    <path d="M13.5 6.5l4 4"></path>
                                                                    <path d="M16 19h6"></path>
                                                                    <path d="M19 16v6"></path>
                                                                </svg>&nbsp; Edit
                                                            </a>
                                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-list-details" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M13 5h8"></path>
                                                                    <path d="M13 9h5"></path>
                                                                    <path d="M13 15h8"></path>
                                                                    <path d="M13 19h5"></path>
                                                                    <path d="M3 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                    <path d="M3 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                </svg> &nbsp; Detail
                                                            </a>
                                                            <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash-x-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M20 6a1 1 0 0 1 .117 1.993l-.117 .007h-.081l-.919 11a3 3 0 0 1 -2.824 2.995l-.176 .005h-8c-1.598 0 -2.904 -1.249 -2.992 -2.75l-.005 -.167l-.923 -11.083h-.08a1 1 0 0 1 -.117 -1.993l.117 -.007h16zm-9.489 5.14a1 1 0 0 0 -1.218 1.567l1.292 1.293l-1.292 1.293l-.083 .094a1 1 0 0 0 1.497 1.32l1.293 -1.292l1.293 1.292l.094 .083a1 1 0 0 0 1.32 -1.497l-1.292 -1.293l1.292 -1.293l.083 -.094a1 1 0 0 0 -1.497 -1.32l-1.293 1.292l-1.293 -1.292l-.094 -.083z" stroke-width="0" fill="currentColor"></path>
                                                                    <path d="M14 2a2 2 0 0 1 2 2a1 1 0 0 1 -1.993 .117l-.007 -.117h-4l-.007 .117a1 1 0 0 1 -1.993 -.117a2 2 0 0 1 1.85 -1.995l.15 -.005h4z" stroke-width="0" fill="currentColor"></path>
                                                                </svg>&nbsp;
                                                                Delete
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.js"></script>
    <script type="text/javascript">
        new DataTable('#role', {
            deferRender: true,
            scrollCollapse: true,
            scroller: true,

        });
    </script>

}