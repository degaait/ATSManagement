@model IEnumerable<ATSManagement.Models.TblCivilJusticeRequestActivity>
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActivityDetail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedByNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityDetail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedByNavigation.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Request.RequestId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ActivityId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ActivityId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ActivityId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
