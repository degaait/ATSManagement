@model ATSManagement.Models.TblTeam
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Team
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Are you sure you want to delete this?</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        Team Name
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.TeamName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Description
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.TeamDescription)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Department
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Dep.DepName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Team Leader
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.TeamLeader.FirstName)
                                        @Html.DisplayFor(model => model.TeamLeader.MidleName)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="TeamId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                                    <a asp-action="Index">Back to List</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

