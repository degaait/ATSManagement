@model ATSManagement.Models.TblTeam

@{
    ViewData["Title"] = "Details";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Team
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Details</h4>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Team Name
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TeamName)
                                </dd>
                                <dt class="col-sm-2">
                                    Description
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TeamDescription)
                                </dd>
                                <dt class="col-sm-2">
                                    Department
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Dep.DepName)
                                </dd>
                                <dt class="col-sm-2">
                                    Team Leader
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TeamLeader.FirstName)
                                    @Html.DisplayFor(model => model.TeamLeader.MidleName)
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <a asp-action="Edit" asp-route-id="@Model?.TeamId">Edit</a> |
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

