@model ATSManagement.Models.TblContactInformation

@{
    ViewData["Title"] = "Edit";
}

<!-- Page header -->
<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        External Requests
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Edit</h4>
                        </div>
                        <form asp-action="Edit">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="ContactId" />
                                        <div class="form-group">
                                            <label asp-for="ContactDetaiMessage" class="control-label"></label>
                                            <input asp-for="ContactDetaiMessage" class="form-control" />
                                            <span asp-validation-for="ContactDetaiMessage" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ContactEmail" class="control-label"></label>
                                            <input asp-for="ContactEmail" class="form-control" />
                                            <span asp-validation-for="ContactEmail" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ContactPhoneNumber" class="control-label"></label>
                                            <input asp-for="ContactPhoneNumber" class="form-control" />
                                            <span asp-validation-for="ContactPhoneNumber" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ContactCountry" class="control-label"></label>
                                            <input asp-for="ContactCountry" class="form-control" />
                                            <span asp-validation-for="ContactCountry" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer hr-text-right">
                                <div class="d-flex">
                                    <input type="submit" value="Save" class="btn btn-primary" />|
                                    <a asp-action="Index">Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


