@model ATSManagement.Models.TblContactInformation
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @_localization.Getkey("other_requests") + ":Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("other_requests")
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">  @_localization.Getkey("are_you_sure_todelete")</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @_localization.Getkey("Details")
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.ContactDetaiMessage)
                        </dd>
                        <dt class="col-sm-2">
                            @_localization.Getkey("email_address")
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ContactEmail)
                        </dd>
                        <dt class="col-sm-2">
                            @_localization.Getkey("phone_number")
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ContactPhoneNumber)
                        </dd>
                        <dt class="col-sm-2">
                            @_localization.Getkey("country")
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ContactCountry)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="card-footer text-end">
                <div class="d-flex">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ContactId" />
                        <input type="submit" value=" @_localization.Getkey("delete")" class="btn btn-danger" /> |
                        <a asp-action="Index"> @_localization.Getkey("backlist")</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


