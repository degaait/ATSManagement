@model ATSManagement.Models.TblSubmenu
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @_localization.Getkey("submenus")+" Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("submenus")
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">@_localization.Getkey("are_you_sure_todelete")</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        <label asp-for="Submenu" class="col-form-label"> @_localization.Getkey("title")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Submenu)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Controller" class="col-form-label">Controller</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Controller)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Action" class="col-form-label">Action</label>

                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Action)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="IsActive" class="col-form-label"> @_localization.Getkey("isactive")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.IsActive)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="DepId" class="col-form-label">@_localization.Getkey("department")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Dep.DepName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="MenuId" class="col-form-label">@_localization.Getkey("main_menu")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Menu.MenuName)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="submit" value="@_localization.Getkey("delete")" class="btn btn-danger" /> 
                                    <a asp-action="Index">@_localization.Getkey("backlist")</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


