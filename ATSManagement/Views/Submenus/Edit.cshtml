@model ATSManagement.Models.TblSubmenu
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @_localization.Getkey("edit");
}
<!-- Page header -->
<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("submenus")

                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@_localization.Getkey("edit")</h4>
            </div>
            <form asp-action="Edit">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="mb-3 row">
                                <label asp-for="Submenu" class="col-4 col-form-label">
                                    @_localization.Getkey("title")
                                </label>
                                <div class="col">
                                    <input asp-for="Submenu" class="form-control" />
                                    <span asp-validation-for="Submenu" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="SubmenuAmharic" class="col-4 col-form-label">   @_localization.Getkey("title_amharic")</label>
                                <div class="col">
                                    <input asp-for="SubmenuAmharic" class="form-control" />
                                    <span asp-validation-for="SubmenuAmharic" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Controller" class="col-4 col-form-label">Controller</label>
                                <div class="col">
                                    <input asp-for="Controller" class="form-control" />
                                    <span asp-validation-for="Controller" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Action" class="col-4 col-form-label">Action</label>
                                <div class="col">
                                    <input asp-for="Action" class="form-control" />
                                    <span asp-validation-for="Action" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="MenuId" class="col-4 col-form-label">@_localization.Getkey("main_menu")</label>
                                <div class="col">
                                    <select asp-for="MenuId" class="form-select" asp-items="ViewBag.MenuId"></select>
                                    <span asp-validation-for="MenuId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="IsActive" class="col-4 col-form-label">
                                    @_localization.Getkey("isactive")
                                </label>
                                <div class="col">
                                    <input asp-for="IsActive" type="checkbox" class="form-check" />
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="DepId" class="col-4 col-form-label"> @_localization.Getkey("department")  </label>
                                <div class="col">
                                    <select asp-for="DepId" class="form-select" asp-items="ViewBag.DepId"></select>
                                    <span asp-validation-for="DepId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <div class="d-flex">
                        <input type="submit" value="@_localization.Getkey("Update")" class="btn btn-primary" />|
                        <a asp-action="Index">@_localization.Getkey("backlist")</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
