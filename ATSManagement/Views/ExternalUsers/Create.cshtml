@model ATSManagement.ViewModels.ExternalUser
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @_localization.Getkey("external_users") + ":Create";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("external_users")

                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Create</h4>
            </div>
            <form asp-action="Create">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3 row">
                                <label asp-for="FirstName" class="col-3 col-form-label"> @_localization.Getkey("first_name")</label>
                                <div class="col">
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="MiddleName" class="col-3 col-form-label">@_localization.Getkey("middle_name")</label>
                                <div class="col">
                                    <input asp-for="MiddleName" class="form-control" />
                                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="LastName" class="col-3 col-form-label">@_localization.Getkey("last_name")</label>
                                <div class="col">
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="EmailAddress" class="col-3 col-form-label">@_localization.Getkey("email_address")</label>
                                <div class="col">
                                    <input asp-for="EmailAddress" class="form-control" />
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="PhoneNumber" class="col-3 col-form-label">@_localization.Getkey("phone_number")</label>
                                <div class="col">
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="UserName" class="col-3 col-form-label">@_localization.Getkey("user_name")</label>
                                <div class="col">
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="InistId" class="col-3 col-form-label">@_localization.Getkey("institution")</label>
                                <div class="col">
                                    @Html.DropDownListFor(model => model.InistId, new SelectList(Model.Inistitutions, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                    <span asp-validation-for="InistId" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="IsActive" class="col-3 col-form-label">@_localization.Getkey("isactive")</label>
                                <div class="col">
                                    <input asp-for="IsActive" type="checkbox" class="form-check-input m-0" />
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="Password" class="col-3 col-form-label">@_localization.Getkey("password")</label>
                                <div class="col">
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="ConfirmPassword" class="col-3 col-form-label">@_localization.Getkey("confirm_password")</label>
                                <div class="col">
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <div class="d-flex">
                        <input type="submit" value="@_localization.Getkey("save")" class="btn btn-primary" />|
                        <a asp-action="Index">@_localization.Getkey("isactive")</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
