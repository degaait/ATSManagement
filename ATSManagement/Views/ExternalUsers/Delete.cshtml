@model ATSManagement.Models.TblExternalUser
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @_localization.Getkey("external_users")+":Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("external_users")
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title btn-danger">@_localization.Getkey("are_you_sure_todelete")</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        <label asp-for="FirstName" class="col-form-label">@_localization.Getkey("first_name")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.FirstName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="FirstName" class="col-form-label">@_localization.Getkey("middle_name") </label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.MiddleName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="LastName" class="col-form-label">@_localization.Getkey("last_name") </label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.LastName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Email" class="col-form-label">@_localization.Getkey("email_address") </label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Email)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Email" class="col-form-label">@_localization.Getkey("phone_number") </label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.PhoneNumber)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Email" class="col-form-label"> @_localization.Getkey("user_name")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.UserName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="Email" class="col-form-label">@_localization.Getkey("institution") </label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Inist.Name)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="ExterUserId" />
                                    <input type="submit" value="@_localization.Getkey("delete")" class="btn btn-danger" /> |
                                    <a asp-action="Index">@_localization.Getkey("backlist") </a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

