@model ATSManagement.Models.TblInternalUser

@{
    ViewData["Title"] = "Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Internal Users
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title btn-danger">Are you sure you want to delete this?</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        <label asp-for="FirstName" class="col-form-label-lg">First Name</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.FirstName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="MidleName" class="col-form-label-lg">Middle Name</label>
                                       
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.MidleName)
                                     
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="LastName" class="col-form-label-lg">Last Name</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.LastName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="EmailAddress" class="col-form-label-lg">Email Address</label>
                                       
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.EmailAddress)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="EmailAddress" class="col-form-label-lg">Is Superadmin?</label>

                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.IsSuperAdmin)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="EmailAddress" class="col-form-label-lg">Is Team leader?</label>

                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.IsTeamLeader)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="EmailAddress" class="col-form-label-lg">Phone number</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.PhoneNumber)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="EmailAddress" class="col-form-label-lg">User name</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.UserName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="EmailAddress" class="col-form-label-lg">Department</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Dep.DepName)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <div class="d-flex">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="UserId" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

