@model ATSManagement.Models.TblInternalUser

@{
    ViewData["Title"] = "Details";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Internal users
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Details</h4>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    <label asp-for="FirstName" class="col-form-label-m">First Name</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.FirstName)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="MidleName" class="col-form-label-m">Middle Name</label>

                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.MidleName)

                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="LastName" class="col-form-label-m">Last Name</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.LastName)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="EmailAddress" class="col-form-label-m">Email Address</label>

                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.EmailAddress)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="EmailAddress" class="col-form-label-m">Is Superadmin?</label>

                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IsSuperAdmin)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="EmailAddress" class="col-form-label-m">Is Team leader?</label>

                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IsTeamLeader)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="EmailAddress" class="col-form-label-m">Phone number</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.PhoneNumber)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="EmailAddress" class="col-form-label-m">User name</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserName)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="EmailAddress" class="col-form-label-m">Department</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Dep.DepName)
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <a asp-action="Edit" asp-route-id="@Model?.UserId">Edit</a> |
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

