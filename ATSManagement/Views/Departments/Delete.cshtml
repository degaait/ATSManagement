@model ATSManagement.Models.TblDepartment
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @_localization.Getkey("department") +" Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("department")
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">@_localization.Getkey("are_you_sure_todelete")</h4>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    <label asp-for="DepName" class="col-form-label-m">@_localization.Getkey("name")</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DepName)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="DepName" class="col-form-label-m">@_localization.Getkey("name_amharic")</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DepNameAmharic)
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="DepId" />
                                    <input type="submit" value="@_localization.Getkey("delete")" class="btn btn-danger" /> |
                                    <a asp-action="Index">@_localization.Getkey("backlist")</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

