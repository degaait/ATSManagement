@model ATSManagement.Models.TblAppointment
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @_localization.Getkey("appointment") +":Details";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("appointment")
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title btn-danger"> @_localization.Getkey("Details")</h4>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    <label asp-for="AppointmentDetail" class="col-form-label-m"> @_localization.Getkey("Details")</label>

                                </dt>
                                <dd class="col-sm-10">
                                    @Html.Raw(Model.AppointmentDetail)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="AppointmentDetail" class="col-form-label-m"> @_localization.Getkey("meeting_outcome")</label>

                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DescusionFinalComeup)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="AppointmentDetail" class="col-form-label-m">@_localization.Getkey("CreatedDate")</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.CreatedDate)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="AppointmentDetail" class="col-form-label-m">@_localization.Getkey("appointment_Date")</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.AppointmentDate)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="AppointmentDetail" class="col-form-label-m">@_localization.Getkey("institution")</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Inist.Name)
                                </dd>
                                <dt class="col-sm-2">
                                    <label asp-for="AppointmentDetail" class="col-form-label-m">@_localization.Getkey("RequestedUser")</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.RequestedByNavigation.FirstName)
                                    @Html.DisplayFor(model => model.RequestedByNavigation.MiddleName)
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <a asp-action="Edit" asp-route-id="@Model?.AppointmentId">@_localization.Getkey("edit")</a> |
                                <a asp-action="Index">@_localization.Getkey("backlist")</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

