@model ATSManagement.Models.TblWitnessEvidence

@{
    ViewData["Title"] = "Delete";
}


<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Witness
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title btn-danger">Are you sure you want to delete this?</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        <label asp-for="WitnessesName" class="col-form-label-m">Witneses Name</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.Raw(Model.WitnessesName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="WitnessesName" class="col-form-label-m">Evidence File</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @if (Model.EvidenceFiles != null)
                                        {
                                            <a class="btn btn-primary" asp-action="DownloadEvidenceFile" asp-controller="CivilJustices" asp-route-path="@Model.EvidenceFiles">

                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-download" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                    <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                                                    <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
                                                    <path d="M12 17v-6"></path>
                                                    <path d="M9.5 14.5l2.5 2.5l2.5 -2.5"></path>
                                                </svg>
                                                Download
                                            </a>
                                        }
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="EvidenceVideos" class="col-form-label-m">Evidence Videos</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @if (Model.EvidenceVideos != null)
                                        {
                                            <a class="btn btn-primary" asp-action="DownloadEvidenceFile" asp-controller="CivilJustices" asp-route-path="@Model.EvidenceVideos">

                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-download" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                    <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                                                    <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
                                                    <path d="M12 17v-6"></path>
                                                    <path d="M9.5 14.5l2.5 2.5l2.5 -2.5"></path>
                                                </svg>
                                                Download
                                            </a>
                                        }
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="CreatedDate" class="col-form-label-m">Created Date</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CreatedDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="CreatedByNavigation.UserId" class="col-form-label-m">Created By</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CreatedByNavigation.FirstName)
                                        @Html.DisplayFor(model => model.CreatedByNavigation.MidleName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Request)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.Raw(Model.Request.RequestId)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <form asp-action="DeleteWitness">
                                    <input type="hidden" asp-for="WitnessId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                                    <a asp-action="Index">Back to List</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

