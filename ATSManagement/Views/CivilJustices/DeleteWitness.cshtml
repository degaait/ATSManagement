@model ATSManagement.Models.TblWitnessEvidence
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = _localization.Getkey("adjournment") + ":Delete";
}
<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("adjournment")
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title btn-danger">@_localization.Getkey("are_you_sure_todelete")</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <dl class="row">
                        <dt class="col-sm-2">
                            <label asp-for="WitnessesName" class="col-form-label">@_localization.Getkey("witnessName")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.WitnessesName)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="WitnessesName" class="col-form-label">@_localization.Getkey("Evidence_File")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.EvidenceFiles != null)
                            {
                                <a class="btn btn-primary" asp-action="DocumentViewer" asp-controller="DocumentViewer" asp-route-path="@Model.EvidenceFiles" asp->

                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-download" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                                        <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
                                        <path d="M12 17v-6"></path>
                                        <path d="M9.5 14.5l2.5 2.5l2.5 -2.5"></path>
                                    </svg>
                                    @_localization.Getkey("view_file")
                                </a>
                            }
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="EvidenceVideos" class="col-form-label">@_localization.Getkey("Evidence_Videos")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.EvidenceVideos != null)
                            {
                                <a class="btn btn-primary" asp-action="DocumentViewer" asp-controller="DocumentViewer" asp-route-path="@Model.EvidenceVideos">

                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-file-download" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                                        <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
                                        <path d="M12 17v-6"></path>
                                        <path d="M9.5 14.5l2.5 2.5l2.5 -2.5"></path>
                                    </svg>
                                    @_localization.Getkey("view_file")
                                </a>
                            }
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="CreatedDate" class="col-form-label">@_localization.Getkey("created_Date")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreatedDate)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="CreatedByNavigation.UserId" class="col-form-label">@_localization.Getkey("created_by")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreatedByNavigation.FirstName)
                            @Html.DisplayFor(model => model.CreatedByNavigation.MidleName)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="CreatedDate" class="col-form-label">@_localization.Getkey("requests")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.Request.RequestDetail)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="card-footer text-end">
                <div class="d-flex">
                    <form asp-action="DeleteWitness">
                        <input type="hidden" asp-for="WitnessId" />
                        <input type="submit" value="@_localization.Getkey("delete")" class="btn btn-danger" /> |
                        <a asp-action="Index">@_localization.Getkey("backlist")</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

