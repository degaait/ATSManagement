@model IEnumerable<ATSManagement.Models.TblCivilJustice>
@*@inject IHttpContextAccessor httpsSession;
    @inject AtsdbContext ats;*@
@{
    ViewData["Title"] = "Requests";
    //Guid userId = Guid.Parse(httpsSession.HttpContext.Session.GetString("userId"));
    //var user = (from item in ats.TblInternalUsers where item.UserId == userId select item).FirstOrDefault();
}

<style type="text/css">
    .table thead th {
        text-transform: capitalize !important;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: .825rem !important;
        font-weight: bolder;
    }
</style>
<link href="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.css" rel="stylesheet">
<!-- Page header -->
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Requests
                </h2>
            </div>
            <!-- Page title actions -->

        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Requests</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <table class="table table-bordered" id="role">
                                <thead>
                                    <tr>
                                        <th>
                                            Detail
                                        </th>
                                        <th>
                                            Created Date
                                        </th>
                                        <th>
                                            Created by
                                        </th>
                                        <th>
                                            Assigned date
                                        </th>
                                        <th>
                                            Due date
                                        </th>
                                        <th>
                                            Assignment Remark
                                        </th>
                                        <th>
                                            Progress status
                                        </th>
                                        <th>
                                            Priority
                                        </th>
                                        <th>
                                            User upproved
                                        </th>
                                        <th>
                                            Team upproved
                                        </th>
                                        <th>
                                            Deputy upproved
                                        </th>
                                        <th>
                                            Final status
                                        </th>
                                        <th>
                                            Assigned by
                                        </th>
                                        <th>
                                            Assigned to
                                        </th>
                                        <th>
                                            Case type
                                        </th>
                                        <th>
                                            Department
                                        </th>
                                        <th>
                                            Inistitution
                                        </th>
                                        <th>
                                            External User
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>
                                                @Html.Raw(item.RequestDetail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedByNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.CreatedByNavigation.MidleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AssignedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DueDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AssingmentRemark)
                                            </td>
                                            <td>
                                                @Html.Raw(item.ExternalRequestStatus.StatusWithColor)
                                            </td>
                                            <td>
                                                @if (item.PriorityId != null)
                                                {
                                                    @Html.Raw(item.Priority.PriorityNameWithColor)
                                                }

                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsUpprovedByUser)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsUprovedByTeam)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsUprovedByDeputy)
                                            </td>
                                            <td>
                                                @Html.Raw(item.TopStatus)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AssignedByNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.AssignedByNavigation.MidleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AssignedToNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.AssignedToNavigation.MidleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CaseType.CaseTypeName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Dep.DepName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Inist.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RequestedByNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.RequestedByNavigation.MiddleName)
                                            </td>
                                            <td>
                                                <div class="btn-list flex-nowrap">
                                                    <div class="dropdown">
                                                        <button class="btn dropdown-toggle align-text-top" data-bs-toggle="dropdown">
                                                            Actions
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-end">
                                                            <a class="dropdown-item" asp-action="AddActivity" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-square-rounded-plus-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M12 2l.324 .001l.318 .004l.616 .017l.299 .013l.579 .034l.553 .046c4.785 .464 6.732 2.411 7.196 7.196l.046 .553l.034 .579c.005 .098 .01 .198 .013 .299l.017 .616l.005 .642l-.005 .642l-.017 .616l-.013 .299l-.034 .579l-.046 .553c-.464 4.785 -2.411 6.732 -7.196 7.196l-.553 .046l-.579 .034c-.098 .005 -.198 .01 -.299 .013l-.616 .017l-.642 .005l-.642 -.005l-.616 -.017l-.299 -.013l-.579 -.034l-.553 -.046c-4.785 -.464 -6.732 -2.411 -7.196 -7.196l-.046 -.553l-.034 -.579a28.058 28.058 0 0 1 -.013 -.299l-.017 -.616c-.003 -.21 -.005 -.424 -.005 -.642l.001 -.324l.004 -.318l.017 -.616l.013 -.299l.034 -.579l.046 -.553c.464 -4.785 2.411 -6.732 7.196 -7.196l.553 -.046l.579 -.034c.098 -.005 .198 -.01 .299 -.013l.616 -.017c.21 -.003 .424 -.005 .642 -.005zm0 6a1 1 0 0 0 -1 1v2h-2l-.117 .007a1 1 0 0 0 .117 1.993h2v2l.007 .117a1 1 0 0 0 1.993 -.117v-2h2l.117 -.007a1 1 0 0 0 -.117 -1.993h-2v-2l-.007 -.117a1 1 0 0 0 -.993 -.883z" fill="currentColor" stroke-width="0"></path>
                                                                </svg>&nbsp;
                                                                Add Activity
                                                            </a>
                                                            <a class="dropdown-item" asp-action="Replies" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 16l-6-6 6-6" /><path d="M20 21v-7a4 4 0 0 0-4-4H5" /></svg>&nbsp;
                                                                Replies
                                                            </a>
                                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-pencil-plus" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M4 20h4l10.5 -10.5a2.828 2.828 0 1 0 -4 -4l-10.5 10.5v4"></path>
                                                                    <path d="M13.5 6.5l4 4"></path>
                                                                    <path d="M16 19h6"></path>
                                                                    <path d="M19 16v6"></path>
                                                                </svg>&nbsp;  Edit
                                                            </a>
                                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-list-details" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M13 5h8"></path>
                                                                    <path d="M13 9h5"></path>
                                                                    <path d="M13 15h8"></path>
                                                                    <path d="M13 19h5"></path>
                                                                    <path d="M3 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                    <path d="M3 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                </svg> &nbsp;Detail
                                                            </a>
                                                            <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash-x-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M20 6a1 1 0 0 1 .117 1.993l-.117 .007h-.081l-.919 11a3 3 0 0 1 -2.824 2.995l-.176 .005h-8c-1.598 0 -2.904 -1.249 -2.992 -2.75l-.005 -.167l-.923 -11.083h-.08a1 1 0 0 1 -.117 -1.993l.117 -.007h16zm-9.489 5.14a1 1 0 0 0 -1.218 1.567l1.292 1.293l-1.292 1.293l-.083 .094a1 1 0 0 0 1.497 1.32l1.293 -1.292l1.293 1.292l.094 .083a1 1 0 0 0 1.32 -1.497l-1.292 -1.293l1.292 -1.293l.083 -.094a1 1 0 0 0 -1.497 -1.32l-1.293 1.292l-1.293 -1.292l-.094 -.083z" stroke-width="0" fill="currentColor"></path>
                                                                    <path d="M14 2a2 2 0 0 1 2 2a1 1 0 0 1 -1.993 .117l-.007 -.117h-4l-.007 .117a1 1 0 0 1 -1.993 -.117a2 2 0 0 1 1.85 -1.995l.15 -.005h4z" stroke-width="0" fill="currentColor"></path>
                                                                </svg>&nbsp;  Delete
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script src="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.js"></script>
    <script type="text/javascript">
        new DataTable('#role', {
            deferRender: true,
            scrollCollapse: true,
            scroller: true,
        });
    </script>
    <script type="text/javascript">
        var dp = $("#Date").datepicker({
            format: "dd/mm/yyyy",
            viewMode: "years",
            minViewMode: "years",
            autoclose: true
        });
        dp.on('changeDate', function (e) {
            $(this).datepicker("setDate", new Date(e.date.getFullYear() + 1, e.date.getMonth(), 0))
        });
    </script>
}
