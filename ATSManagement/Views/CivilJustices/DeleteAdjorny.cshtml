@model ATSManagement.Models.TblAdjornment
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @_localization.Getkey("adjournment") + ":Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("adjournment")
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title btn-danger">@_localization.Getkey("are_you_sure_todelete")</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <dl class="row">
                        <dt class="col-sm-2">
                            <label asp-for="AdjorneyDate" class="col-form-label">@_localization.Getkey("adjournment_date") </label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.AdjorneyDate)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="WhatIsDone" class="col-form-label">@_localization.Getkey("what_is_done")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.WhatIsDone)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="WhatIsDone" class="col-form-label">@_localization.Getkey("what_is_done")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreatedDate)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="CreatedByNavigation" class="col-form-label">@_localization.Getkey("created_by")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreatedByNavigation.FirstName)
                            @Html.DisplayFor(model => model.CreatedByNavigation.MidleName)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="CreatedByNavigation" class="col-form-label">@_localization.Getkey("requests")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.Request.RequestId)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="card-footer text-end">
                <div class="d-flex">
                    <form asp-action="DeleteAdjorny">
                        <input type="hidden" asp-for="AdjoryId" />
                        <input type="submit" value="@_localization.Getkey("delete")" class="btn btn-danger" /> |
                        <a asp-action="Index">@_localization.Getkey("backlist")</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


