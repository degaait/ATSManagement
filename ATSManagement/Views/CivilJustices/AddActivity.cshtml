@model ATSManagement.ViewModels.ActivityModel
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.EntityFrameworkCore
@inject AtsdbContext _context;
@{
    ViewData["Title"] = _localization.Getkey("Progress_Activities");
    Guid? ID = ViewBag.RequestId;
    var activities = _context.TblActivities
                .Include(x => x.Request)
                .Include(x => x.CreatedByNavigation)
                .Where(x => x.RequestId == ID).ToList();
}
<style type="text/css">
    .table thead th {
        text-transform: capitalize !important;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: .825rem !important;
        font-weight: bolder;
    }
</style>
<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("Progress_Activities");
                    </h2>
                </div>
            </div>
        </div>
    </div>
   
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                        </div>
                        <form asp-action="AddActivity">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <input asp-for="RequestId" type="hidden" class="form-control" />
                                        <input asp-for="CreatedBy" type="hidden" class="form-control" />
                                        <div class="mb-3 row">
                                            <label asp-for="ActivityDetail" class=" col-3 col-form-label">@_localization.Getkey("Progress_Activities")</label>
                                            <div class="col">
                                                <input asp-for="ActivityDetail" class="form-control" />
                                                <span asp-validation-for="ActivityDetail" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="AddedDate" class=" col-3 col-form-label">@_localization.Getkey("datetime")</label>
                                            <div class="col">
                                                <input asp-for="AddedDate" readonly class="form-control" />
                                                <span asp-validation-for="AddedDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-end">
                                <div class="d-flex">
                                    <input type="submit" value="@_localization.Getkey("save")" class="btn btn-primary" />|
                                    <a asp-action="AssignedRequests">@_localization.Getkey("backlist")</a>
                                </div>
                            </div>
                        </form>
                        <br />

                    </div>
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"> @_localization.Getkey("Progress_Activities")</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <table class="table table-striped table-bordered" id="role">
                                    <thead>
                                        <tr>
                                            <th>
                                                @_localization.Getkey("Details")
                                            </th>
                                            <th>
                                                @_localization.Getkey("datetime")
                                            </th>
                                            <th>
                                                @_localization.Getkey("user")
                                            </th>
                                            <th>
                                                @_localization.Getkey("request")
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in activities)
                                        {

                                            <tr>
                                                @{
                                                    var requestName = _context.TblRequests.Where(a => a.RequestId == item.RequestId).FirstOrDefault();
                                                }
                                                <td>
                                                    @Html.Raw(item.ActivityDetail)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AddedDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CreatedByNavigation.FirstName)
                                                    @Html.DisplayFor(modelItem => item.CreatedByNavigation.MidleName)
                                                </td>
                                                <td>
                                                    @Html.Raw(requestName.RequestDetail)
                                                </td>
                                                <td>
                                                    <a asp-action="DeleteActivity" asp-route-id="@item.ActivityId"> @_localization.Getkey("delete")</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>

    $(document).ready(function () {
        $('#role').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'excel', 'print'
            ]
        });
    });

</script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let options = {
                selector: '#ActivityDetail',
                height: 300,
                menubar: true,
                statusbar: false,
                plugins: [
                    'advlist autolink lists link image charmap print preview anchor',
                    'searchreplace visualblocks code fullscreen',
                    'insertdatetime media table paste code help wordcount',
                    'lists'
                ],
                toolbar: 'undo redo | formatselect | ' +
                    'bold italic backcolor | alignleft aligncenter ' +
                    'alignright alignjustify | bullist numlist outdent indent | ' +
                    'removeformat',
                content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif; font-size: 14px; -webkit-font-smoothing: antialiased; }'
            }
            if (localStorage.getItem("tablerTheme") === 'dark') {
                options.skin = 'oxide-dark';
                options.content_css = 'dark';
            }
            tinyMCE.init(options);
        })
    </script>
}
