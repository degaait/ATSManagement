@model ATSManagement.Models.TblActivity
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = _localization.Getkey("Progress_Activities") + ":Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("Progress_Activities")
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title btn-danger"> @_localization.Getkey("are_you_sure_todelete")</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <dl class="row">
                        <dt class="col-sm-2">
                            <label asp-for="ActivityDetail" class="col-form-label">@_localization.Getkey("Detail")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ActivityDetail)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="AddedDate" class="col-form-label">@_localization.Getkey("created_Date")</label>

                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.AddedDate)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="CreatedByNavigation" class="col-form-label">@_localization.Getkey("created_by")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreatedByNavigation.FirstName)
                            @Html.DisplayFor(model => model.CreatedByNavigation.MidleName)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="CreatedByNavigation" class="col-form-label">@_localization.Getkey("requests")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.Request.RequestDetail)
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card-footer text-end">
                <div class="d-flex">
                    <form asp-action="DeleteActivity">
                        <input type="hidden" asp-for="ActivityId" />
                        <input type="submit" value="@_localization.Getkey("delete")" class="btn btn-danger" /> |
                        <a asp-action="AddActivity" asp-route-id="@Model.RequestId">@_localization.Getkey("backlist")</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



