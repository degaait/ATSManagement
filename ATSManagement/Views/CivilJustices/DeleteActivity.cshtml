@model ATSManagement.Models.TblCivilJusticeRequestActivity
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Activity
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title btn-danger">Are you sure you want to delete this?</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        <label asp-for="ActivityDetail" class="col-form-label-m">Activity detail</label>

                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.ActivityDetail)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="AddedDate" class="col-form-label-m">Added date</label>

                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.AddedDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="CreatedByNavigation" class="col-form-label-m">Created by</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CreatedByNavigation.FirstName)
                                        @Html.DisplayFor(model => model.CreatedByNavigation.MidleName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="CreatedByNavigation" class="col-form-label-m">Request</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.Raw(Model.Request.RequestDetail)
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <form asp-action="DeleteActivity">
                                    <input type="hidden" asp-for="ActivityId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                                    <a asp-action="Index">Back to List</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


