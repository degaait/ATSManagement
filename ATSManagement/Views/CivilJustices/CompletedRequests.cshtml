@model IEnumerable<ATSManagement.Models.TblRequest>
@inject IHttpContextAccessor httpsSession;
@inject AtsdbContext ats;
@{
    ViewData["Title"] = "Requests";
    Guid userId = Guid.Parse(httpsSession.HttpContext.Session.GetString("userId"));
    var user = (from item in ats.TblInternalUsers where item.UserId == userId select item).FirstOrDefault();
}

<style type="text/css">
    .table thead th {
        text-transform: capitalize !important;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: .825rem !important;
        font-weight: bolder;
    }
</style>
<link href="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.css" rel="stylesheet">
<!-- Page header -->
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                   Completed Requests
                </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
            </div>
        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Requests</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <table class="table table-bordered" id="role">
                                <thead>
                                    <tr>
                                        <th>
                                            Detail
                                        </th>
                                        <th>
                                            Created Date
                                        </th>
                                        <th>
                                            Created by
                                        </th>
                                        <th>
                                            Assigned date
                                        </th>
                                        <th>
                                            Due date
                                        </th>
                                        <th>
                                            Assignment Remark
                                        </th>
                                        <th>
                                            Progress status
                                        </th>
                                        <th>
                                            Priority
                                        </th>
                                        <th>
                                            Team Approval
                                        </th>
                                        <th>
                                            Department Approval
                                        </th>
                                        <th>
                                            Deputy Approval
                                        </th>
                                        <th>
                                            Final status
                                        </th>
                                        <th>
                                            Assigned by
                                        </th>
                                        <th>
                                            Assigned to
                                        </th>
                                        <th>
                                            Case type
                                        </th>
                                        <th>
                                            Department
                                        </th>
                                        <th>
                                            Inistitution
                                        </th>
                                        <th>
                                            External User
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var isRequest = (from items in ats.TblCivilJustices where items.RequestId == item.RequestId select items).FirstOrDefault();
                                        var assigneess = (from users in ats.TblRequestAssignees where users.RequestId == item.RequestId select users.User).ToList();

                                        <tr>
                                            <td>
                                                @Html.Raw(item.RequestDetail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedByNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.CreatedByNavigation.MidleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AssignedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DueDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AssingmentRemark)
                                            </td>
                                            <td>
                                                @Html.Raw(item.ExternalRequestStatus.StatusWithColor)
                                            </td>
                                            <td>
                                                @if (item.PriorityId != null)
                                                {
                                                    @Html.Raw(item.Priority.PriorityNameWithColor)
                                                }

                                            </td>
                                            <td>
                                                @Html.Raw(item.TeamUpprovalStatusNavigation.StatusWithColor)
                                            </td>
                                            <td>
                                                @Html.Raw(item.DepartmentUpprovalStatusNavigation.StatusWithColor)
                                            </td>
                                            <td>
                                                @Html.Raw(item.DeputyUprovalStatusNavigation.StatusWithColor)
                                            </td>
                                            <td>
                                                @Html.Raw(item.TopStatus)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AssignedByNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.AssignedByNavigation.MidleName)
                                            </td>
                                            <td>
                                                @foreach (var assignees in assigneess)
                                                {
                                                    @Html.DisplayFor(modelItem => assignees.FirstName)
                                                    @Html.DisplayFor(modelItem => assignees.MidleName)
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CaseType.CaseTypeName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Dep.DepName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Inist.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RequestedByNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.RequestedByNavigation.MiddleName)
                                            </td>
                                            <td>
                                                <div class="btn-list flex-nowrap">
                                                    <div class="dropdown">
                                                        <button class="btn dropdown-toggle align-text-top" data-bs-toggle="dropdown">
                                                            Actions
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-end">
                                                            @if (isRequest.AssignedTo == null)
                                                            {
                                                                if (user.IsDepartmentHead == true || user.IsSuperAdmin == true)
                                                                {
                                                                    <a class="dropdown-item" asp-action="AssignToUser" asp-route-id="@item.RequestId">
                                                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-zoom-check-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                            <path d="M14 3.072a8 8 0 0 1 2.617 11.424l4.944 4.943a1.5 1.5 0 0 1 -2.008 2.225l-.114 -.103l-4.943 -4.944a8 8 0 0 1 -12.49 -6.332l-.006 -.285l.005 -.285a8 8 0 0 1 11.995 -6.643zm-.293 4.22a1 1 0 0 0 -1.414 0l-3.293 3.294l-1.293 -1.293l-.094 -.083a1 1 0 0 0 -1.32 1.497l2 2l.094 .083a1 1 0 0 0 1.32 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z" stroke-width="0" fill="currentColor"></path>
                                                                        </svg>&nbsp;
                                                                        Assign Request
                                                                    </a>
                                                                    <a class="dropdown-item" asp-action="Replies" asp-route-id="@item.RequestId">
                                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 16l-6-6 6-6" /><path d="M20 21v-7a4 4 0 0 0-4-4H5" /></svg>&nbsp;
                                                                        Replies
                                                                    </a>
                                                                }
                                                            }
                                                            <a class="dropdown-item" asp-action="UppdateDesicionStatus" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-circle-check-filled" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-1.293 5.953a1 1 0 0 0 -1.32 -.083l-.094 .083l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.403 1.403l.083 .094l2 2l.094 .083a1 1 0 0 0 1.226 0l.094 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z" stroke-width="0" fill="currentColor"></path>
                                                                </svg>
                                                                Uppdate Upproval Status
                                                            </a>
                                                            <a class="dropdown-item" asp-action="RequestActivities" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-list-details" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M13 5h8"></path>
                                                                    <path d="M13 9h5"></path>
                                                                    <path d="M13 15h8"></path>
                                                                    <path d="M13 19h5"></path>
                                                                    <path d="M3 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                    <path d="M3 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                </svg> &nbsp;Activities
                                                            </a>
                                                            <a class="dropdown-item" asp-action="RequestAdjornies" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-list-details" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M13 5h8"></path>
                                                                    <path d="M13 9h5"></path>
                                                                    <path d="M13 15h8"></path>
                                                                    <path d="M13 19h5"></path>
                                                                    <path d="M3 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                    <path d="M3 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                </svg> &nbsp;Adjornies
                                                            </a>
                                                            <a class="dropdown-item" asp-action="WitnessesandEvidences" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-list-details" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M13 5h8"></path>
                                                                    <path d="M13 9h5"></path>
                                                                    <path d="M13 15h8"></path>
                                                                    <path d="M13 19h5"></path>
                                                                    <path d="M3 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                    <path d="M3 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                </svg> &nbsp;Witnesses and Evidences
                                                            </a>
                                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-list-details" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M13 5h8"></path>
                                                                    <path d="M13 9h5"></path>
                                                                    <path d="M13 15h8"></path>
                                                                    <path d="M13 19h5"></path>
                                                                    <path d="M3 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                    <path d="M3 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                </svg> &nbsp;Detail
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script src="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.js"></script>
    <script type="text/javascript">
        new DataTable('#role', {
            deferRender: true,
            scrollCollapse: true,
            scroller: true,
        });
    </script>
    <script type="text/javascript">
        var dp = $("#Date").datepicker({
            format: "dd/mm/yyyy",
            viewMode: "years",
            minViewMode: "years",
            autoclose: true
        });
        dp.on('changeDate', function (e) {
            $(this).datepicker("setDate", new Date(e.date.getFullYear() + 1, e.date.getMonth(), 0))
        });
    </script>
}
