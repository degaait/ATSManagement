@model ATSManagement.Models.TblRequest
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = _localization.Getkey("requests")+":Details";
}
<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("requests")
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title btn-danger">@_localization.Getkey("requests")</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        <label asp-for="RequestDetail" class="col-form-label-m">  @_localization.Getkey("Details")</label>

                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.Raw(Model.RequestDetail)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="CreatedDate" class="col-form-label-m">@_localization.Getkey("CreatedDate")</label>

                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CreatedDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="CreatedBy" class="col-form-label-m">@_localization.Getkey("user")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CreatedByNavigation.FirstName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="AssignedDate" class="col-form-label-m">@_localization.Getkey("user")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.AssignedDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="DueDate" class="col-form-label-m">@_localization.Getkey("duedate")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.DueDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="DueDate" class="col-form-label-m">@_localization.Getkey("assignmentDate")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.AssingmentRemark)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="DueDate" class="col-form-label-m">@_localization.Getkey("progress_status")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        <div class="col-sm-2">
                                            @if (Model.ExternalRequestStatusId != null)
                                            {
                                                @Html.Raw(Model.ExternalRequestStatus.StatusWithColor)
                                            }
                                        </div>
                                    </dd>

                                    <dt class="col-sm-2">
                                        <label asp-for="TopStatus" class="col-form-label-m">@_localization.Getkey("final_status")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.TopStatus)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="AssignedBy" class="col-form-label-m">@_localization.Getkey("Assigned_by")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.AssignedByNavigation.FirstName)
                                        @Html.DisplayFor(model => model.AssignedByNavigation.MidleName)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="AssignedTo" class="col-form-label-m">@_localization.Getkey("Assigned_to")</label>
                                    </dt>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.CaseType)
                                        <label asp-for="AssignedTo" class="col-form-label-m">@_localization.Getkey("serviceType")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CaseType.CaseTypeName)
                                    </dd>
                                    
                                    <dt class="col-sm-2">
                                        <label asp-for="InistId" class="col-form-label-m">@_localization.Getkey("institution")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Inist.Name)
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="RequestedBy" class="col-form-label-m">@_localization.Getkey("institution")</label>
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.RequestedByNavigation.FirstName)
                                        @Html.DisplayFor(model => model.RequestedByNavigation.MiddleName)
                                    </dd>

                                    <dt class="col-sm-2">
                                        <label asp-for="TeamUpprovalStatus" class="col-form-label-m">Team Upproval status</label>

                                    </dt>
                                    <dd class="col-sm-10">
                                        <div class="col-sm-2">
                                            @Html.Raw(Model.TeamUpprovalStatusNavigation.StatusWithColor)
                                        </div>
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="DepartmentUpprovalStatus" class="col-form-label-m">Department Upproval status</label>

                                    </dt>
                                    <dd class="col-sm-10">
                                        <div class="col-sm-2">
                                            @Html.Raw(Model.DepartmentUpprovalStatusNavigation.StatusWithColor)
                                        </div>
                                    </dd>
                                    <dt class="col-sm-2">
                                        <label asp-for="DeputyUprovalStatus" class="col-form-label-m">Deputy Upproval status</label>

                                    </dt>
                                    <dd class="col-sm-10">
                                        <div class="col-sm-2">
                                            @Html.Raw(Model.DeputyUprovalStatusNavigation.StatusWithColor)
                                        </div>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <a asp-action="Edit" asp-route-id="@Model?.RequestId">Edit</a> |
                                <a asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

