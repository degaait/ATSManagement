@model IEnumerable<ATSManagement.Models.TblCivilJusticeRequestReply>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReplayDetail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReplyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExternalReplayedByNavigation)
            </th>
