@model ATSManagement.Models.TblMainMenu
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @_localization.Getkey("Recomendations") + " Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("main_menu")
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title btn-danger">@_localization.Getkey("are_you_sure_todelete")</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <dl class="row">
                        <dt class="col-sm-2">
                            <label asp-for="MenuName" class="col-form-label">@_localization.Getkey("name")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.MenuName)
                        </dd>
                        <dt class="col-sm-2">
                            <label asp-for="MenuDescription" class="col-form-label">@_localization.Getkey("Description")</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.MenuDescription)
                        </dd>
                    </dl>
                </div>
            </div>
            <div class="card-footer text-end">
                <div class="d-flex">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="MenuId" />
                        <input type="submit" value="@_localization.Getkey("delete")" class="btn btn-danger" /> |
                        <a asp-action="Index">@_localization.Getkey("backlist")</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


