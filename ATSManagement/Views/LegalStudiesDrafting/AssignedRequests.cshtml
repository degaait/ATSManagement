@model IEnumerable<ATSManagement.Models.TblLegalStudiesDrafting>
@*@inject IHttpContextAccessor httpsSession;
    @inject AtsdbContext ats;*@
@{
    ViewData["Title"] = "Requests";
    //Guid userId = Guid.Parse(httpsSession.HttpContext.Session.GetString("userId"));
    //var user = (from item in ats.TblInternalUsers where item.UserId == userId select item).FirstOrDefault();
}

<style type="text/css">
    .table thead th {
        text-transform: capitalize !important;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: .825rem !important;
        font-weight: bolder;
    }
</style>
<link href="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.css" rel="stylesheet">
<!-- Page header -->
<div class="page-header d-print-none">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Requests
                </h2>
            </div>
            <!-- Page title actions -->

        </div>
    </div>
</div>

<!-- Page body -->
<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Requests</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <table class="table table-bordered" id="role">
                                <thead>
                                    <tr>
                                        <th>
                                            Detail
                                        </th>
                                        <th>
                                            Created Date
                                        </th>
                                        <th>
                                            Created by
                                        </th>
                                        <th>
                                            Assigned date
                                        </th>
                                        <th>
                                            Due date
                                        </th>
                                        <th>
                                            Assignment Remark
                                        </th>
                                        <th>
                                            Progress status
                                        </th>
                                        <th>
                                            Priority
                                        </th>
                                        <th>
                                            User upproved
                                        </th>
                                        <th>
                                            Team upproved
                                        </th>
                                        <th>
                                            Deputy upproved
                                        </th>
                                        <th>
                                            Final status
                                        </th>
                                        <th>
                                            Assigned by
                                        </th>
                                        <th>
                                            Assigned to
                                        </th>
                                        <th>
                                            Case type
                                        </th>
                                        <th>
                                            Department
                                        </th>
                                        <th>
                                            Inistitution
                                        </th>
                                        <th>
                                            External User
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>
                                                @Html.Raw(item.RequestDetail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CreatedByNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.CreatedByNavigation.MidleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AssignedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DueDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AssingmentRemark)
                                            </td>
                                            <td>
                                                @Html.Raw(item.ExternalRequestStatus.StatusWithColor)
                                            </td>
                                            <td>
                                                @if (item.PriorityId != null)
                                                {
                                                    @Html.Raw(item.Priority.PriorityNameWithColor)
                                                }

                                            </td>
                                            <td>
                                                @Html.Raw(item.UserUpprovalStatus)
                                            </td>
                                            <td>
                                                @Html.Raw(item.DepartmentUpprovalStatus)
                                            </td>
                                            <td>
                                                @Html.Raw(item.DeputyUprovalStatus)
                                            </td>
                                            <td>
                                                @Html.Raw(item.TopStatus)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AssignedByNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.AssignedByNavigation.MidleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AssignedToNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.AssignedToNavigation.MidleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Doc.DocName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Dep.DepName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Inist.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RequestedByNavigation.FirstName)
                                                @Html.DisplayFor(modelItem => item.RequestedByNavigation.MiddleName)
                                            </td>
                                            <td>
                                                <div class="btn-list flex-nowrap">
                                                    <div class="dropdown">
                                                        <button class="btn dropdown-toggle align-text-top" data-bs-toggle="dropdown">
                                                            Actions
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-end">
                                                            <a class="dropdown-item" asp-action="AddActivity" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fafafa" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>&nbsp;
                                                                Add Activity
                                                            </a>
                                                            <a class="dropdown-item" asp-action="Replies" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 16l-6-6 6-6" /><path d="M20 21v-7a4 4 0 0 0-4-4H5" /></svg>&nbsp;
                                                                Replies
                                                            </a>
                                                            <a class="dropdown-item" asp-action="UpploadFinalReport" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-cloud-upload" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M7 18a4.6 4.4 0 0 1 0 -9a5 4.5 0 0 1 11 2h1a3.5 3.5 0 0 1 0 7h-1"></path>
                                                                    <path d="M9 15l3 -3l3 3"></path>
                                                                    <path d="M12 12l0 9"></path>
                                                                </svg>&nbsp;
                                                                Final Report
                                                            </a>
                                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.RequestId">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-list-details" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                                    <path d="M13 5h8"></path>
                                                                    <path d="M13 9h5"></path>
                                                                    <path d="M13 15h8"></path>
                                                                    <path d="M13 19h5"></path>
                                                                    <path d="M3 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                    <path d="M3 14m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v4a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z"></path>
                                                                </svg> &nbsp;Detail
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script src="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.js"></script>
    <script type="text/javascript">
        new DataTable('#role', {
            deferRender: true,
            scrollCollapse: true,
            scroller: true,
        });
    </script>
    <script type="text/javascript">
        var dp = $("#Date").datepicker({
            format: "dd/mm/yyyy",
            viewMode: "years",
            minViewMode: "years",
            autoclose: true
        });
        dp.on('changeDate', function (e) {
            $(this).datepicker("setDate", new Date(e.date.getFullYear() + 1, e.date.getMonth(), 0))
        });
    </script>
}
