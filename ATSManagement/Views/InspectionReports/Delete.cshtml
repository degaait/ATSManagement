@model ATSManagement.Models.TblInspectionReport
@using ATSManagement.Services;
@inject LanguageService _localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = @_localization.Getkey("Recomendations") + " Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        @_localization.Getkey("Recomendations")
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@_localization.Getkey("are_you_sure_todelete")</h4>
            </div>
            <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @_localization.Getkey("Detail")
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ReportTitle)
                        </dd>
                       
                        <dt class="col-sm-2">
                            @_localization.Getkey("year")
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Year)
                        </dd>
                        <dt class="col-sm-2">
                            @_localization.Getkey("created_by")
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreatedByNavigation.FirstName)
                            @Html.DisplayFor(model => model.CreatedByNavigation.MidleName)
                        </dd>       `
                        <dt class="col-sm-2">
                            @_localization.Getkey("created_Date")
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreatinDate)
                        </dd>
                        <dt class="col-sm-2">
                            @_localization.Getkey("institution")
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Inist.Name)
                        </dd>
                    </dl>
               
            </div>
            <div class="card-footer text-end">
                <div class="d-flex">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ReportId" />
                        <input type="submit" value="@_localization.Getkey("delete")" class="btn btn-danger" />
                        <a asp-action="Index">@_localization.Getkey("backlist")</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


