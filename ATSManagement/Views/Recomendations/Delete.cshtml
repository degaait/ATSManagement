@model ATSManagement.Models.TblRecomendation

@{
    ViewData["Title"] = "Delete";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                       Recomendations
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Are you sure you want to delete this?</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        Recomendation Detail
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.Raw(Model.Recomendation)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Status
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Recostatus.Status)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Year
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.EvaluationYear)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Created by
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CreatedByNavigation.FirstName)
                                        @Html.DisplayFor(model => model.CreatedByNavigation.MidleName)
                                    </dd>       `
                                    <dt class="col-sm-2">
                                        Creation Date
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.CreatinDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Modified Date
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.ModifyDate)
                                    </dd>
                                    <dt class="col-sm-2">
                                        IsActive?
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.IsActive)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Institutions
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Inist.Name)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                        <div class="card-footer text-end">
                            <div class="d-flex">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="RecoId" />
                                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                                    <a asp-action="Index">Back to List</a>
                                </form>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

