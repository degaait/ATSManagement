@model ATSManagement.ViewModels.RecomendationModel

@{
    ViewData["Title"] = "Edit";
}

<div class="page-wrapper">
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Recomendations
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="row row-cards">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Edit</h4>
                        </div>
                        <form asp-action="Edit">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="RecoId" />
                                        <input type="hidden" asp-for="CreatedBy" />
                                        <div class="mb-6 row">

                                            <label asp-for="Title" class="col-3 col-form-label"></label>
                                            <div class="col">
                                                <input asp-for="Title" class="form-control" required />
                                                <span asp-validation-for="Title" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-6 row">
                                            <label asp-for="Recomendation" class="col-3 col-form-label">Recomendation Laws</label>
                                            <div class="col">
                                                <input asp-for="Recomendation" class="form-control" />
                                                <span asp-validation-for="Recomendation" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-6 row">
                                            <label asp-for="InistId" class="col-3 col-form-label">Inistitutions</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.InistId, new SelectList(Model.Inistitutions, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="InistId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-4 row">
                                            <label asp-for="Status" class="col-3 col-form-label">Status</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.RecostatusID, new SelectList(Model.Status, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="RecostatusID" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="YearId" class="col-3 col-form-label">Evaluation year</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.YearId, new SelectList(Model.Years, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="RecostatusID" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="LawId" class="col-3 col-form-label">Inspection Laws</label>
                                            <div class="col">
                                                @Html.DropDownListFor(model => model.LawId, new SelectList(Model.Laws, "Value", "Text"), "--Select here--", htmlAttributes: new { @class = "form-select" })
                                                <span asp-validation-for="LawId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-3 col-form-label">Final Report</label>
                                            <div class="col">
                                                <input asp-for="FinalReport" type="file" class="form-file-button" />
                                                <span asp-validation-for="FinalReport" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-4 row">
                                            <label asp-for="IsActive" class="col-3 col-form-label">IsActive?</label>
                                            <div class="col">
                                                <input asp-for="IsActive" class="form-check-input m-0" type="checkbox" />
                                                <span asp-validation-for="IsActive" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-end">
                                <div class="d-flex">
                                    <input type="submit" value="Create" class="btn btn-primary" />|
                                    <a asp-action="Index">Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let options = {
                selector: '#Recomendation',
                height: 500,
                menubar: true,
                statusbar: false,
                plugins: [
                    'table',
                    'advlist autolink lists link image charmap print preview anchor',
                    'searchreplace visualblocks code fullscreen',
                    'insertdatetime media table paste code help wordcount',
                    'lists',
                'table tabledelete | tableprops tablerowprops tablecellprops | tableinsertrowbefore tableinsertrowafter tabledeleterow | tableinsertcolbefore tableinsertcolafter tabledeletecol'
                ],
                toolbar: 'undo redo | formatselect | ' +
                    'bold italic backcolor | alignleft aligncenter ' +
                    'alignright alignjustify | bullist numlist outdent indent | ' +
                    'removeformat',
                content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, San Francisco, Segoe UI, Roboto, Helvetica Neue, sans-serif; font-size: 14px; -webkit-font-smoothing: antialiased; }'
            }
            if (localStorage.getItem("tablerTheme") === 'dark') {
                options.skin = 'oxide-dark';
                options.content_css = 'dark';
            }
            tinyMCE.init(options);
        })
    </script>


}
